<h4><label onclick="ShowHideDiv(divEntry)">Entries</label></h4>
    <div id="divEntry" style="display:block;">
        <table>
            <tr>
                <td style="width:50%">@Html.ActionLink("Employee Master", "../Employee/Index")</td>
                <td style="width:50%">@Html.ActionLink("Attendance Entry", "../Attendance/Index")</td>
            </tr>
            
            <tr>
                <td>@Html.ActionLink("Incentives Entry", "../AttendanceDetail/CreateUpdate")</td>
