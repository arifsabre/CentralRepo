@model ManufacturingManagement_V2.Models.AlertsMdl
@{
    ViewBag.Title = "HRDashboard";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}
<h2>Production Department</h2>
<div style="width:100%;border:solid;border-width:1px;border-color:blue;border-radius:4px;padding-left:2px;">
@Html.Partial("AlertPartialSummary",Model)

<h4><label onclick="ShowHideDiv(divEntry)">Entries</label></h4>
    <div id="divEntry" style="display:block;">
        <table>
            <tr>
                <td style="width:50%">@Html.ActionLink("Production Plan Status", "../ProductionPlan/IndexStatus")</td>
                <td>@Html.ActionLink("Daily Production View", "../ProductionEntry/Index")</td>
            </tr>
            
            <tr>
                <td>@Html.ActionLink("Daily Production Entry", "../ProductionEntry/CreateUpdate")</td>
            </tr>
        </table>
    </div>  
<br/><br/>
<h4><label onclick="ShowHideDiv(divReport)">Reports</label></h4>
    <div id="divReport" style="display:block;">
        <table>
            <tr>
                <td style="width:50%">@Html.ActionLink("Production Plan Status Report", "../ProductionReport/ProductionPlanStatusIndex")</td>
                <td>@Html.ActionLink("Daily Production Report", "../ProductionReport/Index")</td>
            </tr>
            
            <tr>
                <td>@Html.ActionLink("Production Target Status Report", "../ProductionReport/ProductionTargetStatusIndex")</td>
            </tr>
        </table>
    </div>
    <br/>  
</div>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        function ShowHideDiv(id) {
            if (id.style.display == "block") {
                id.style.display = "none";
            }
            else {
                id.style.display = "block";
            }
        }
    </script>
}

