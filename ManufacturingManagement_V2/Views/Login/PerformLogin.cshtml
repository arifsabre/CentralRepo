        $(function () {
            document.getElementById('OTP').focus();
        });
    </script>
</head>
<body>
   

    @using (Html.BeginForm())
    {
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel panel-heading">
                    <h3 class="panel-title"> </h3>
                </div>
                <div class="panel-body text-left">

                    <div class="gd-logo"><a href="http://www.praggroup.com"> <img id="img1" alt="" width="100" height="70 " src="http://192.168.0.20:80/Images/Praglogo.png" /></a></div>
                </div>
            </div>
        </div>
        <h3 style="text-align:center">PRAG ERP LOGIN OTP</h3>
        @Html.ValidationSummary(true)
<div class="login-panel">
        @*@if (ViewBag.errormessage != null)
        {
            <p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>
        }*@
    <div class="form-group">
        <div class="col-md-12 col-xs-12">
            @* <h3>Prag Group of Industries </h3>*@
        </div>
    </div>
    @*   @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })*@
    <div class="form-group">
        <div class="col-md-12 col-xs-12">
            <h5><b>@ViewBag.UserOTP</b></h5>
            @Html.Label("Enter OTP send on your registered mobile number to complete login")
            @Html.PasswordFor(model => model.OTP, new { @class = "form-control", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.OTP, "", new { @class = "text-danger" })
        </div>
    </div>
