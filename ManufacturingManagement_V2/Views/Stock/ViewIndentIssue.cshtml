@model IEnumerable<ManufacturingManagement_V2.Models.StockMdl>

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h2>Indent Issue List</h2>

@*<p>
    @Html.ActionLink("Create New", "CreateUpdate", null, new { @class = "btn btn-default" }) 
</p>*@

<fieldset>
        <legend>Stock</legend>
            @using (Ajax.BeginForm("ViewIndentIssueFilter", "Stock", new AjaxOptions { UpdateTargetId = "divFilter" }))
            {
                <div class="form-group">
                        <table>
                            <tr>
                                <td>From</td>
                                <td>@Html.TextBox("txtDtFrom",null,new { @class = "datepicker" })</td>
                                <td>To</td>
                                <td>@Html.TextBox("txtDtTo",null,new { @class = "datepicker" })</td>
                            </tr>
                        </table>
                      </div>
                <button class="btn btn-default">Submit</button>
            }   
</fieldset>

<table class="tablecontainer" style="width:100%;">
    <tr>
        <th style="width:30px;">
            S.No.
        </th>
        <th style="width:30px;">
            IssueNo
        </th>
        <th style="width:25px;">Print</th>
        <th style="width:25px;">
            IssueDate
        </th>
        <th style="width:auto;">
            @Html.DisplayNameFor(model => model.IndentNo)
        </th>
        <th style="width:auto;">
            @Html.DisplayNameFor(model => model.IndentByName)
        </th>
    </tr>
    @{int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VNo)
            </td>
            <td>
                @Html.ActionLink("Print", "../IndentReport/IndentIssueSlip", new { stkrecid = item.RecId }, new { @target = "_new;" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndentNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndentByName)
            </td>
        </tr>
        i++;
    }

</table>

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
            document.getElementById("txtDtFrom").value = '@ViewBag.DtFrom';
            document.getElementById("txtDtTo").value = '@ViewBag.DtTo';
        });
    </script>
    <script type="text/javascript">
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
    </script>
}