@model ManufacturingManagement_V2.Models.CompanyAddressMdl
@{
    ViewBag.Title = "CompanyAddress";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Company Address List</title>

    <script>
        function deleteRecord(recid) {
            var a = confirm("Are you sure to delete this record?");
            if (a == false) {
                return false;
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "CompanyAddress")',
                dataType: 'html',
                data: ({
                    //insert your parameters to pass to controller
                    recid: recid
                }),
                success: function () {
                    alert("Record Deleted Successfully");
                    location.reload();
                }
            });
        }
    </script>

    <script>
        function callUpdate(recid) {
            $('#modal-Update').modal('show');
            var ifrm = document.getElementById("frmUpdate");
            ifrm.setAttribute('src', '@ViewBag.baseurl' + "//CompanyAddress/CreateUpdate?id=" + recid)
        }
    </script>

    <script>
        function callInsert() {
            $('#modal-Insert').modal('show');
            var ifrm = document.getElementById("frmInsert");
            ifrm.setAttribute('src', '@ViewBag.baseurl' + "//CompanyAddress/CreateUpdate")
        }
    </script>

</head>
<body>
    <div>
        <h4><b>Company Address List</b></h4>
        <button type="button" class="btn btn-default"
                data-toggle="modal" onclick="callInsert()">
            Create New
        </button>
        <div id="printbar" class="pull-right">
        </div>
    </div>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                            <table id="jdtabledesktop" class="display overlay-wrapper" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width:15px;vertical-align:top;">S.No.</th>
                                        <th style="width:50px;vertical-align:top;">Company</th>
                                        <th style="width:50px;vertical-align:top;">Address&nbsp;Name</th>
                                        <th style="width:auto;vertical-align:top;">Address</th>
                                        <th style="width:50px;vertical-align:top;">PIN</th>
                                        <th style="width:50px;vertical-align:top;">State</th>
                                        <th style="width:auto;vertical-align:top;">State&nbsp;Code</th>
                                        <th style="width:50px;text-align:left;" align="left">Action</th>
                                    </tr>
                                </thead>
                                @{int i = 1;}
                                <tbody>
                                    @foreach (var item in Model.AddressList)
                                    {
                                        <tr>
                                            <td style="vertical-align:top;">@i</td>
                                            <td style="vertical-align:top;">@Html.DisplayFor(model => item.CmpName)</td>
                                            <td style="vertical-align:top;">@Html.DisplayFor(model => item.AddressName)</td>
                                            <td style="vertical-align:top;">@Html.DisplayFor(model => item.CAddress)</td>
                                            <td style="vertical-align:top;">@Html.DisplayFor(model => item.PinCode)</td>
                                            <td style="vertical-align:top;">@Html.DisplayFor(model => item.StateName)</td>
                                            <td style="vertical-align:top;">@Html.DisplayFor(model => item.StateCode)</td>
                                            <td style="vertical-align:top;">
                                                @*Edit*@
                                                <a onclick="callUpdate(@item.RecId)">
                                                    <i class="fa fa-pencil-square" style="font-size:15pt;"></i>
                                                </a>
                                                &nbsp;&nbsp;&nbsp;
                                                @*Delete*@
                                                @Html.ActionLink(" ", null, new { recid = item.RecId },
                                                   new
                                                        {
                                                            onclick = "deleteRecord('" + item.RecId + "')",
                                                       @class = "fa fa-trash-o",
                                                            @style = "font-size:15pt;"
                                                        })
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="modal-Update">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="box-title">Update Address</h4>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        <iframe id="frmUpdate" runat="server" scrolling="no" frameborder="0"
                                style="width:550px;height:580px;opacity:100;">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-Insert">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="box-title">Create Address</h4>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        <iframe id="frmInsert" runat="server" scrolling="no" frameborder="0"
                                style="width:550px;height:580px;opacity:100;">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Script/Site.js"></script>
</body>
</html>



