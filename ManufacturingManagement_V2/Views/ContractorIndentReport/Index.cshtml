@model ManufacturingManagement_V2.Models.ContractorIndentMDI
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
<h4><b>Indent Form For Approval</b></h4>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <div class="form-group">
            <table class="table table-bordered">
                <tr>
                    <td><b>Enter Task Number to Print The Form</b></td>
                </tr>
                <tr>
                    <td>@Html.EditorFor(model => model.RecordId)</td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" class="btn btn-default" value="Submit" onclick="target = '_blank';"
                               formaction="@Url.Action("ContractorIndentPrintForm")" />
                    </td>
                </tr>
            </table>
    </div>
   
}

