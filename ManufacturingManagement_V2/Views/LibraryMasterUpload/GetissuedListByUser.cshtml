@model ManufacturingManagement_V2.Models.LibFileUploadMDI
@{
    ViewBag.Title = "GetissuedListByUser";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Issue File List</title>
    </head>
<body>

    <div style="font-family:Arial">
        <script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
        <div class="pull-right">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-Insert" style="margin-right:3px;margin-bottom:3px;margin-top:3px;margin-left:2px">
                Add New
            </button>
            <div id="printbar" class="pull-left" style="margin-right:5px;margin-bottom:3px;margin-top:3px">
            </div>
        </div>

        &nbsp; &nbsp;   @Ajax.ActionLink("All Physical Files", "AllPhysical", new AjaxOptions {
HttpMethod = "GET", // HttpMethod to use, GET or POST
UpdateTargetId = "divFiles", // ID of the HTML element to update
InsertionMode = InsertionMode.Replace // Replace the existing contents

})
        <div id="divFiles">
        </div>
    </div>
    <span style="color:Blue;"></span>


    @*<div class="row" style="margin-top:2px;margin-bottom:2px;margin-left:0px">


        </div>*@
    @*<button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-Insert" style="margin-top:2px;margin-bottom:2px">
            Add New File
        </button>
        <div id="printbar" class="pull-right">
        </div>*@
    <section class="content">
        <div class="col-md-pull-10">
            <div class="col-md-6 pull-left">
                <div class="panel panel-success">
                    <div class="panel panel-heading">
                        <h4 class="panel-title"> &nbsp; &nbsp; Doccument Control System</h4>
                    </div>

                    <div class="panel-body text-center">
                        <div class="col-md-3">
                            @Html.ActionLink("Total", "Indexcategory", "LibraryMasterUpload", null, new { @class = "btn btn-success" })
                            @*<a href='@Url.Action("Indexcategory", "LibraryMasterUpload")'>*@
                            @*<h4>Total</h4>*@
                            <h4>@ViewBag.totalDoc</h4>

                            @*</a>*@
                        </div>

                        <div class="col-md-3">
                            @Html.ActionLink("Issued", "GetissuedListByUser", "LibraryMasterUpload", null, new { @class = "btn btn-success" })
                            @*<a href='@Url.Action("GetissuedListByUser", "LibraryMasterUpload")'>
                                <h4>Issued</h4>*@
                            <h4>@ViewBag.TotalIssued</h4>
                            @*</a>*@
                        </div>

                        <div class="col-md-3">
                            @Html.ActionLink("Recieved", "GetRecievedListByUser", "LibraryMasterUpload", null, new { @class = "btn btn-success" })
                            @*<a href='@Url.Action("GetRecievedListByUser", "LibraryMasterUpload")'>
                                    <h4>Recieved</h4>
                                    <h4>@ViewBag.totalRecieved</h4>
                                </a>*@
                            <h4>@ViewBag.totalRecieved</h4>
                        </div>
                        <div class="col-md-3">
                            @Html.ActionLink("Return", "GetReturnTOConfirmListByUser", "LibraryMasterUpload", null, new { @class = "btn btn-success" })
                            @*<a href='@Url.Action("GetReturnTOConfirmListByUser", "LibraryMasterUpload")'>
                                    <h4>Return</h4>
                                    <h4>@ViewBag.totalReturn</h4>
                                </a>*@
                            <h4>@ViewBag.totalReturn</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                        <table id="jdtabledesktop" class="display nowrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Action</th>
                                    <th>Issue</th>
                                    <th>File_NO</th>
                                    <th>Company</th>
                                    <th>File_Name</th>
                                    <th>Location</th>
                                    <th>Owner</th>
                                    @*<th>File_Type</th>*@
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Item_List)
                                {
                                    <tr>
                                        <td>
                                            <a onclick="GetRecordDetail(@item.RecordId)">
                                                <i class="fa fa-eye">
                                                </i>
                                            </a>
                                            <a onclick="GetDetails(@item.RecordId)">
                                                <i class="fa fa-pencil-square">
                                                </i>
                                            </a>

                                            <a>
                                                @Html.ActionLink(" ", "LibraryMasterDeleteRecord", "LibraryMasterUpload", new { id = item.RecordId }, new { onclick = "return confirm('Are you sure wants to delete?');", @class = "fa fa-trash-o" })
                                            </a>
                                        </td>
                                        <td>
                                            <a onclick="IssueTo(@item.RecordId)">
                                                <i class="fa fa-pencil-square">
                                                </i>
                                            </a>
                                        </td>

                                        @*<td>
                                                <a onclick="GetConfirmation(@item.RecordId)">
                                                    <i class="fa fa-pencil-square">
                                                    </i>
                                                </a>
                                            </td>*@

                                        <td>@Html.DisplayFor(model => item.RecordId)</td>
                                        <td>

                                            @Html.DisplayFor(model => item.ShortName)
                                            <a onclick="GetCompany(@item.RecordId)">
                                                <i class="fa fa-pencil-square">
                                                </i>
                                            </a>
                                        </td>
                                        <td>@Html.DisplayFor(model => item.DoccumentName)</td>
                                        <td>@Html.DisplayFor(model => item.Location)</td>
                                        <td>
                                            @Html.DisplayFor(model => item.EmpName)
                                            <a onclick="GetOwner(@item.RecordId)">
                                                <i class="fa fa-pencil-square">
                                                </i>
                                            </a>
                                        </td>
                                        @*  <td>@Html.DisplayFor(model => item.Type1)</td>*@
                                        <td>@Html.DisplayFor(model => item.Status)</td>
                                        @*<td> @Html.DisplayFor(model => item.ReturnStatus) </td>*@
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Script/Site.js"></script>
</body>
</html>


