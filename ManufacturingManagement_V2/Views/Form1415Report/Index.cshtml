@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Form -14 / 15 Reports</b></h4>

@{var lstFormNo = new List<System.Web.UI.WebControls.ListItem>
    {
          new System.Web.UI.WebControls.ListItem { Text = "Form 14", Value="14" },
          new System.Web.UI.WebControls.ListItem { Text = "Form 15", Value="15" },
    };
 }

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

<div class="form-group">
    <h5><b>Report Options</b></h5>
    <table class="table table-bordered">
        @Html.HiddenFor(model => model.NewEmpId)
        <tr>
            <td>Year</td>
            <td>@Html.EditorFor(model => model.AttYear)</td>
            <td>Form No</td>
            <td>@Html.DropDownListFor(model => model.FormNo, new SelectList(lstFormNo, "Value", "Text"))</td>
        </tr>
        <tr>
            <td>Month From</td>
            <td>@Html.EditorFor(model => model.VNoFrom)</td>
            <td>Month Up to</td>
            <td>@Html.EditorFor(model => model.VNoTo)</td>
        </tr>
        <tr>
            <td>Employee</td>
            <td>@Html.EditorFor(model => model.EmpName)</td>
            <td colspan="2">Print Sum @Html.EditorFor(model => model.Detailed)</td>
        </tr>
        <tr><td colspan="3"><h5><b>Leave Summary</b></h5></td></tr>
        <tr>
            <td>Unit</td>
            <td>@Html.DropDownListFor(model => model.CompCode, ViewBag.CompanyList as SelectList)</td>
            <td>Grade</td>
            <td>@Html.DropDownListFor(model => model.Grade, ViewBag.GradeList as SelectList, "All")</td>
        </tr>
        <tr>
            <td>From</td>
            <td>@Html.EditorFor(model => model.DateFrom)</td>
            <td>To</td>
            <td>@Html.EditorFor(model => model.DateTo)</td>
        </tr>
        <tr>
            <td>Report Format</td>
            <td>@Html.DropDownListFor(model => model.ReportFormat, ViewBag.ReportFormatList as SelectList)</td>
        </tr>
    </table>
</div>
<p>
    <input type="submit" class="btn btn-default" style="width:150px;" value="Form-14/15" onclick="target = '_blank';"
           formaction="@Url.Action("Form1415Report")" />
    <input type="submit" class="btn btn-default" style="width:150px;" value="Leave Statement" onclick="target = '_blank';"
           formaction="@Url.Action("LeaveStatementReport")" />
    <input type="submit" class="btn btn-default" style="width:150px;" value="Leave Summary" onclick="target = '_blank';"
           formaction="@Url.Action("LeaveSummaryReport")" />
    <br />[Form-14/15 Printer Setting: Paper - A4, Option - Fit To Printable Area]
</p>
    <h5><b>@ViewBag.Message</b></h5>
}

@section Scripts{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            document.getElementById("VNoFrom").focus();
            $("#Detailed").attr("style", "width:55px;height:25px;");
            document.getElementById("NewEmpId").value = '@ViewBag.newempid';
            document.getElementById("EmpName").value = '@ViewBag.empname';
        });
    </script>
    
<script type="text/javascript">
    $("#EmpName").autocomplete({
        source: function (request, response) {
            var customer = new Array();
            $.ajax({
                async: false,
                cache: false,
                type: "POST",
                url: "@(Url.Action("AutoCompleteEmployeeNew", "HelpUtility"))",
                    data: { "term": request.term },
                    success: function (data) {
                        for (var i = 0; i < data.length ; i++) {
                            customer[i] = { label: data[i].Value, Id: data[i].Key };
                        }
                    }
                });
            response(customer);
        }, minLength: 2,
        select: function (event, ui) {
            document.getElementById('NewEmpId').value = ui.item.Id;
        }
    });
</script>

}


