@model ManufacturingManagement_V2.Models.QualificationMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Qualification</b></h4>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        <div class="form-group">
            <table class="table table-bordered">
                <tr>
                    @Html.HiddenFor(model => model.QualId)
                    <td style="width:10%;">@Html.LabelFor(model => model.Qualification)</td>
                    <td>
                        @Html.EditorFor(model => model.Qualification)
                        @Html.ValidationMessageFor(model => model.Qualification)
                    </td>
                </tr>
            </table>
        </div>
    <h5><b>@ViewBag.Message</b></h5>
        <p>
            <input type="submit" class="btn btn-default" value=@ViewBag.AddEdit />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
        });
    </script>
}