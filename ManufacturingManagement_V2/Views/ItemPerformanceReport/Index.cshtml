@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Item Performance Report</b></h4>

@{var lstSortOn = new List<System.Web.UI.WebControls.ListItem>
    {
        new System.Web.UI.WebControls.ListItem { Text = "Supply Date", Value="vdate" },
        new System.Web.UI.WebControls.ListItem { Text = "PO Date", Value="podate" }
          
    };
 }
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<div class="form-group">
    <h5><b>Report Options</b></h5>
    <table class="table table-bordered">
        @Html.HiddenFor(model => model.FgItemId)
        <tr>
            <td style="width:15%;"><b>Company</b></td>
            <td>
                @Html.DropDownListFor(model => model.CompCode, ViewBag.CompanyList as SelectList)
                @Html.ValidationMessageFor(model => model.CompCode)
            </td>
        </tr>
        <tr>
            <td><b>Supply Date From</b></td>
            <td>
                @Html.EditorFor(model => model.DateFrom)
                @Html.ValidationMessageFor(model => model.DateFrom)
            </td>
        </tr>
        <tr>
            <td><b>Supply Date To</b></td>
            <td>
                @Html.EditorFor(model => model.DateTo)
                @Html.ValidationMessageFor(model => model.DateTo)
            </td>
        </tr>
        <tr>
            <td><b>Item</b></td>
            <td>
                @Html.EditorFor(model => model.FgItemCode)
                @Html.ValidationMessageFor(model => model.FgItemId)
            </td>
        </tr>
        <tr>
            <td><b>Sort On</b></td>
            <td>
                @Html.DropDownListFor(model => model.SortColumn, new SelectList(lstSortOn, "Value", "Text"))
            </td>
        </tr>
        <tr>
            <td><b>Report Format</b></td>
            <td>@Html.DropDownListFor(model => model.ReportFormat, ViewBag.ReportFormatList as SelectList)</td>
        </tr>
    </table>
</div>
        <p>
            <input type="submit" class="btn btn-default" value="Submit" onclick="target = '_blank';"
                formaction="@Url.Action("ItemPerformancePOwiseRpt")" />
        </p>
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@section Scripts {

    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
            $("#FgItemCode").attr("placeholder", "start typing, then select");
        });

    </script>

    <script type="text/javascript">
        $("#FgItemCode").autocomplete({
            source: function (request, response) {
                var customer = new Array();
                var ddlSIndex = document.getElementById("CompCode").selectedIndex;
                var ccode = document.getElementsByTagName("option")[ddlSIndex].value;
                $.ajax({
                    async: false,
                    cache: false,
                    type: "POST",
                    url: "@(Url.Action("AutoCompleteFinishedItemList", "HelpUtility"))",
                    data: { "term": request.term, "ccode": ccode },
                    success: function (data) {
                        for (var i = 0; i < data.length ; i++) {
                            customer[i] = { label: data[i].Value, Id: data[i].Key };
                        }
                    }
                });
                response(customer);
            }, minLength: 2,
            select: function (event, ui) {
                document.getElementById('FgItemId').value = ui.item.Id;
            }
        });
</script>

}