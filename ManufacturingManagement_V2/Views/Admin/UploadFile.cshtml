@{
    ViewBag.Title = "UploadFile";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Upload File / (Admin Access)</b></h4>
<br/>
<fieldset>
    @using (Html.BeginForm("UploadFile", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table class="table table-bordered">
            <tr>
                <td style="width:15%;"><label for="file"><i>Select file to upload</i></label></td>
                <td><input style="color:green;font-weight:bold;" type="file" name="file" id="file" /></td>
            </tr>
        </table>
        <p>
            <input type="submit" class="btn btn-default" value="Upload File" />
            @Html.ActionLink("View Uploaded Files", "Downloads", null, new { @class = "btn btn-default" })
            @Html.ActionLink("Back", "../Admin/Index", null, new { @class = "btn btn-default" })
            <h5><b>@ViewBag.Message</b></h5>
        </p>
    }
</fieldset>
