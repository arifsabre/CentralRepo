@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>LIC Report</b></h4>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

<div class="form-group">
    <h5><b>Report Options</b></h5>
    <table class="table table-bordered">
        <tr>
            <td style="width:12%;">Company</td>
            <td>@Html.DropDownListFor(model => model.CompCode, ViewBag.CompanyList as SelectList)</td>
        </tr>
        <tr>
            <td>Date From</td>
            <td>@Html.EditorFor(model => model.DateFrom)</td>
        </tr>
        <tr>
            <td>Date To</td>
            <td>@Html.EditorFor(model => model.DateTo)</td>
        </tr>
        <tr>
            <td>Age Above 58 Yrs</td>
            <td>@Html.EditorFor(model => model.Above58)</td>
        </tr>
        <tr>
            <td>New Joining</td>
            <td>@Html.EditorFor(model => model.Detailed)</td>
        </tr>
        <tr>
            <td>Report Format</td>
            <td>@Html.DropDownListFor(model => model.ReportFormat, ViewBag.ReportFormatList as SelectList)</td>
        </tr>
    </table>
</div>
    <p>
       <input type="submit" class="btn btn-default" style="width:150px;" value="LIC Worksheet" onclick="target = '_blank';" 
           formaction="@Url.Action("LICWorksheet")" />
        <input type="submit" class="btn btn-default" style="width:175px;" value="Gratuity Worksheet" onclick="target = '_blank';" 
           formaction="@Url.Action("GratuityWorksheet")" />
    </p>
    <h5><b>@ViewBag.Message</b></h5>
}

@section Scripts{
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
            $("#Above58").attr("style", "width:55px;height:25px;");
            $("#Detailed").attr("style", "width:55px;height:25px;");
        });
    </script>
}
