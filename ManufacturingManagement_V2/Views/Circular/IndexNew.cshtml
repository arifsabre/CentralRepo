@model ManufacturingManagement_V2.Models.CircularMdl
@{
    ViewBag.Title = "CircularList";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Circular List</title>

    <script>
        function deleteCircular(recid) {
            var a = confirm("Are you sure to delete this circular?");
            if (a == false) {
                return false;
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "Circular")',
                dataType: 'html',
                data: ({
                    //insert your parameters to pass to controller
                    recid: recid
                }),
                success: function () {
                    alert("Circular Deleted Successfully");
                    location.reload();
                }
            });
        }
    </script>

    <script>
        function callUpdate(recid) {
            $('#modal-Update').modal('show');
            var ifrm = document.getElementById("frmUpdate");
            ifrm.setAttribute('src', '@ViewBag.baseurl' + "//Circular/CreateUpdate?id=" + recid);
        }
    </script>

    <script>
        function callInsert() {
            $('#modal-Insert').modal('show');
            var ifrm = document.getElementById("frmInsert");
            ifrm.setAttribute('src', '@ViewBag.baseurl' + "//Circular/CreateUpdate");
        }
    </script>

    <script>
        function callUpload(recid) {
            $('#modal-Upload').modal('show');
            var ifrm = document.getElementById("frmUpload");
            ifrm.setAttribute('src', '@ViewBag.baseurl' + "//Circular/UploadFile?recid=" + recid);
        }
    </script>

</head>
<body>
    <div>
        <h4><b>Circular List</b></h4>
        <button type="button" class="btn btn-default"
                data-toggle="modal" onclick="callInsert()">
            Create New
        </button>
        <div id="printbar" class="pull-right">
        </div>
    </div>
    <section class="content" style="width:96%;">  @*note*@
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                        <table id="jdtabledesktop" class="display overlay-wrapper" style="width:100%;">
                            <thead>
                                <tr>
                                    <th style="width:15px;">S.No.</th>
                                    <th style="width:50px;">Circular&nbsp;Date</th>
                                    <th style="width:30px;">Circular&nbsp;No</th>
                                    <th style="width:50px;">Department</th>
                                    <th style="width:50px;">From</th>
                                    <th style="width:auto;">Subject</th>
                                    <th style="width:50px;text-align:left;" align="left">File</th>
                                    <th style="width:50px;text-align:left;" align="left">Action</th>
                                </tr>
                            </thead>
                            @{int i = 1;}
                            <tbody>
                                @foreach (var item in Model.CircularList)
                                {
                                    <tr>
                                        <td style="vertical-align:top;">@i</td>
                                        <td style="vertical-align:top;">@Html.DisplayFor(model => item.CircularDate)</td>
                                        <td style="vertical-align:top;">@Html.DisplayFor(model => item.CircularNo)</td>
                                        <td style="vertical-align:top;">@Html.DisplayFor(model => item.Department)</td>
                                        <td style="vertical-align:top;">@Html.DisplayFor(model => item.UserName)</td>
                                        <td style="vertical-align:top;">@Html.DisplayFor(model => item.SubjectOn)</td>
                                        <td style="vertical-align:top;">
                                            @*Upload*@
                                            <a onclick="callUpload(@item.RecId)">
                                                <i class="fa fa-arrow-up" style="font-size:15pt;"></i>
                                            </a>
                                            @*Upload-Old Pattern*@
                                            @*@Html.ActionLink(" ", "UploadFile", "Circular", new { recid = item.RecId },
                                    new { @class = "fa fa-arrow-up", @style = "font-size:15pt;", @target = "_blank;" })*@
                                            &nbsp;&nbsp;&nbsp;
                                            @*Download*@
                                            @if (item.Doc == true)
                                            {
                                                @Html.ActionLink(" ", "ShowDocument", "Circular", new { recid = item.RecId },
                                                         new { @class = "fa fa-arrow-down", @style = "font-size:15pt;", @target = "_blank;" })
                                            }
                                            else
                                            {
                                                <i class="fa fa-times" style="font-size:15pt;"></i>
                                            }
                                        </td>
                                        <td style="vertical-align:top;">
                                            @*Edit*@
                                            <a onclick="callUpdate(@item.RecId)">
                                                <i class="fa fa-pencil-square" style="font-size:15pt;"></i>
                                            </a>
                                            &nbsp;&nbsp;&nbsp;
                                            @*Delete*@
                                            @Html.ActionLink(" ", null, new { recid = item.RecId },
                                               new
                                                    {
                                                        onclick = "deleteCircular('" + item.RecId + "')",
                                                   @class = "fa fa-trash-o",
                                                        @style = "font-size:15pt;"
                                                    })
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="modal-Update">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="box-title">Update Circular</h4>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        <iframe id="frmUpdate" runat="server" scrolling="no" frameborder="0"
                                style="width:550px;height:400px;opacity:100;">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-Insert">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="box-title">Create Circular</h4>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        <iframe id="frmInsert" runat="server" scrolling="no" frameborder="0"
                                style="width:550px;height:400px;opacity:100;">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-Upload">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                            onclick="window.location.href=window.location.href">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="box-title">Upload File</h4>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        <iframe id="frmUpload" runat="server" scrolling="no" frameborder="0"
                                style="width:550px;height:250px;opacity:100;">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Script/Site.js"></script>
</body>
</html>



