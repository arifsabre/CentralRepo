@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h2>Indent Report</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

<div class="container" style="max-width:600px;">
        <div class="form-group">
            <table>
                <tr><td colspan="3"><h3>Report Options</h3></td></tr>
                <tr>
                   <td>Company</td>
                   <td>@Html.DropDownListFor(model => model.CompCode, ViewBag.CompanyList as SelectList)</td> 
                   <td>Status</td>
                   <td>@Html.DropDownListFor(model => model.Status, ViewBag.IndentStatusList as SelectList,"Select")</td> 
                </tr>
                <tr>
                   <td>Indent From</td>
                   <td>@Html.EditorFor(model => model.DateFrom)</td> 
                   <td>Indent To</td>
                   <td>@Html.EditorFor(model => model.DateTo)</td>   
                </tr>
            </table>
        </div>
    </div>
    <p>
        <br/>
       <input type="submit" class="btn btn-default" style="width:150px;" value="Submit" onclick="target = '_blank';" 
           formaction="@Url.Action("IndentReport")" />
    </p>
    <h5><b>@ViewBag.Message</b></h5>
}

@section Scripts{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
        });
    </script>
    
}