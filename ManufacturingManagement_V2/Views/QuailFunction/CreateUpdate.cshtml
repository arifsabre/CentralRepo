@model ManufacturingManagement_V2.Models.QuailFunctionMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>QUAIL Function</b></h4>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        <div class="form-group">
            <table class="table table-bordered">
                <tr>
                    @Html.HiddenFor(model => model.LdUserId)
                <td>@Html.LabelFor(model => model.FctnId)</td>
                <td>
                    @Html.EditorFor(model => model.FctnId)
                    @Html.ValidationMessageFor(model => model.FctnId)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.FctnName)</td>
                <td>
                    @Html.EditorFor(model => model.FctnName)
                    @Html.ValidationMessageFor(model => model.FctnName)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.FnLeader)</td>
                <td>
                    @Html.EditorFor(model => model.FnLeader)
                    @Html.ValidationMessageFor(model => model.FnLeader)
                </td>
            </tr>
            </table>
        </div>
    <h5><b>@ViewBag.Message</b></h5>
        <p>
            <input type="submit" class="btn btn-default" value='@ViewBag.AddEdit' />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </p>
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script type="text/javascript">
        $(function () {
            //$("input[type=textarea]").first().focus();
            document.getElementById("FctnId").focus();
            $("#FnLeader").attr("placeholder", "start typing, then select");
        });
    </script>

    <script type="text/javascript">
        $("#FnLeader").autocomplete({
            source: function (request, response) {
                var customer = new Array();
                $.ajax({
                    async: false,
                    cache: false,
                    type: "POST",
                    url: "@(Url.Action("AutoCompleteUsersList", "HelpUtility"))",
                    data: { "term": request.term },
                    success: function (data) {
                        for (var i = 0; i < data.length ; i++) {
                            customer[i] = { label: data[i].Value, Id: data[i].Key };
                        }
                    }
                });
                response(customer);
            }, minLength: 2,
            select: function (event, ui) {
                document.getElementById('LdUserId').value = ui.item.Id;
            }
        });
</script>

}