@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Attendance Report</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

        <div class="form-group">
            <table class="table table-bordered">
                <tr><td colspan="4"><h5><b>Report Options</b></h5></td></tr>
                <tr>
                    <td>Unit</td>
                    <td>@Html.DropDownListFor(model => model.JoiningUnit, ViewBag.CompanyList as SelectList, "ALL")</td>
                    <td>Grade</td>
                    <td>@Html.DropDownListFor(model => model.Grade, ViewBag.GradeList as SelectList, "ALL")</td>
                </tr>
                <tr>
                    <td>Year</td>
                    <td>@Html.EditorFor(model => model.AttYear)</td>
                    <td>Month</td>
                    <td>@Html.DropDownListFor(model => model.AttMonth, ViewBag.MonthList as SelectList)</td>
                </tr>
                <tr>
                    <td>Shift</td>
                    <td>@Html.DropDownListFor(model => model.AttShift, ViewBag.ShiftList as SelectList)</td>
                    <td>Report Format</td>
                    <td>@Html.DropDownListFor(model => model.ReportFormat, ViewBag.ReportFormatList as SelectList)</td>
                </tr>
                <tr>
                    <td>Day</td>
                    <td>@Html.EditorFor(model => model.AttDay)</td>
                </tr>
            </table>
    </div>
    <p>
        <input type="submit" class="btn btn-default" value="Submit" onclick="target='_blank';" formaction="@Url.Action("AttendanceReport")" />
        <input type="submit" class="btn btn-default" value="Daily Absent Slip" style="width:180px;" onclick="target = '_blank';" formaction="@Url.Action("DailyAttendanceReport")" />
        <input type="submit" class="btn btn-default" value="Absent Summary" style="width:180px;" onclick="target = '_blank';" formaction="@Url.Action("AbsentSummaryReport")" />
    </p>
    <h5>@ViewBag.Message</h5>
}

@section Scripts{
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
        });
    </script>
}