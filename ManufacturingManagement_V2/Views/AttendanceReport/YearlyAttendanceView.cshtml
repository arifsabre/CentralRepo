@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Yearly Attendance Report</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<div class="form-group">
    <h5><b>Report Options</b></h5>
    <table class="table table-bordered">
        <tr>
            <td style="width:10%;">Company</td>
            <td>@Html.DropDownListFor(model => model.CompCode, ViewBag.CompanyList as SelectList)</td>
        </tr>
        <tr>
            <td>Year</td>
            <td>@Html.EditorFor(model => model.AttYear)</td>
        </tr>
        <tr>
            <td>Report Format</td>
            <td>@Html.DropDownListFor(model => model.ReportFormat, ViewBag.ReportFormatList as SelectList)</td>
        </tr>
    </table>
</div>
    <p>
        <input type="submit" class="btn btn-default" value="Submit" onclick="target='_blank';" 
               formaction="@Url.Action("DisplayYearlyAttendanceReport")" />
    </p>
    <h5>@ViewBag.Message</h5>
}

@section Scripts{
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
        });
    </script>
}