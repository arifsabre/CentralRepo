@model IEnumerable<ManufacturingManagement_V2.Models.AAA_ITAssestCell_MDI>  

@*{
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}*@
<table class="table table-bordered" style="text-align:Left">  
    <tr style="text-align:left">
        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.FileContent)
        </th>
        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.OrderNo)
        </th>

        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.Invoice_No)
        </th>

        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.BillNo)
        </th>
        <th class="col-md-2" style="text-align:left">
            @Html.Label("Invoice")
        </th>
        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.ItemQty)
        </th>
        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.ItemDescription)
        </th>
        <th class="col-md-2" style="text-align:left">
            @Html.DisplayNameFor(model => model.Remark)
        </th>
    </tr>  
  
@foreach (var item in Model) {  
    <tr style="text-align:left">
        <td style="text-align:left">
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td style="text-align:left">
            @Html.DisplayNameFor(model => model.FileName)
        </td>
        <td style="text-align:left">
            @Html.DisplayNameFor(model => model.FileContent)
        </td>
        <td style="text-align:left">
            @Html.DisplayNameFor(model => model.OrderNo)
        </td>
        <td style="text-align:left">
            @Html.DisplayNameFor(model => model.Invoice_No)
        </td>

        <td>
            @Html.DisplayNameFor(model => model.BillNo)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.ItemQty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
        <td style="text-align:left">
            @Html.ActionLink("Downlaod", "DownLoadFile", new { id = item.Id })
        </td>
        </tr>  
}  
</table> 