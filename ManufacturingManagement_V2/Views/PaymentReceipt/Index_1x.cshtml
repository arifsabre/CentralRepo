@model IEnumerable<ManufacturingManagement_V2.Models.VoucherMdl>
@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h2>Payment Receipt List</h2>

<p>
    @Html.ActionLink("Create New", "CreateUpdate", null, new { @class = "btn btn-default" }) 
</p>

<fieldset>
        <legend>Advance Detail</legend>
            @using (Ajax.BeginForm("FilterIndex", "PaymentReceipt", new AjaxOptions { UpdateTargetId = "divFilter" }))
            {
                <div class="form-group">
                        <table>
                            <tr>@Html.Hidden("hfEmpId", null, new { @id = "hfEmpId" })
                                <td>From</td>
                                <td>@Html.TextBox("txtDtFrom",null,new { @class = "datepicker" })</td>
                                <td>To</td>
                                <td>@Html.TextBox("txtDtTo",null,new { @class = "datepicker" })</td>
                            </tr>
                        </table>
                      </div>
                <button class="btn btn-default">Submit</button>
            }   
</fieldset>

<table class="tablecontainer" style="width:100%;">
    <tr>
        <th style="width:30px;">
            S.No.
        </th>
        <th style="width:60px;">
            @Html.DisplayNameFor(model => model.VNo)
        </th>
        <th style="width:60px;">
            @Html.DisplayNameFor(model => model.VDate)
        </th>
        <th style="width:auto;">
            Account
        </th>
        <th style="width:60px;">Edit</th>
        <th style="width:60px;">Delete</th>
    </tr>
    @{int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(model => item.VNo)
            </td>
            <td>
                @Html.ValueFor(model => item.VDate, "{0:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(model => item.Info[0].AcDesc)
            </td>
            <td>
                @Html.ActionLink("Edit", "CreateUpdate", new { id = item.VNo })
            </td>
            <td>
                @Html.ActionLink("Delete", null, null,
                new { onclick = "deleteVoucher('" + item.VNo + "')", style = "color:black;" })
            </td>
        </tr>
        i++;
    }

</table>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@section Scripts{
    
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
            //document.getElementById("hfEmpId").value = '@ViewBag.empid';
            document.getElementById("txtDtFrom").value = '@ViewBag.dtfrom';
            document.getElementById("txtDtTo").value = '@ViewBag.dtto';
        });
    </script>
    <script type="text/javascript">
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
    </script>

    <script>
        function deleteVoucher(vno) {
            var a = confirm("Are you sure to delete this voucher?");
            if (a == false) {
                return;
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "VoucherEntryJournal")',
                dataType: 'html',
                data: ({
                    //insert your parameters to pass to controller
                    vno: vno
                }),
                success: function () {
                    //alert("Marked Pending Successfully");
                    location.reload();
                }
            });
        }
</script>

}

