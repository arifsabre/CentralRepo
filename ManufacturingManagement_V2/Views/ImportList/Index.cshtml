@model IEnumerable<ManufacturingManagement_V2.Models.ImportListMdl>
@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Impoprt List</b></h4>

<p>
    @Html.ActionLink("Create New", "CreateUpdate", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Projection List", "ProjectionList",null, 
    new { id = "mylink", @target = "_blank;", @class="btn btn-default" })
</p>

<fieldset>
        @*<legend>Import Detail</legend>*@
            @using (Ajax.BeginForm("FilterIndex", "ImportList", new AjaxOptions { UpdateTargetId = "divFilter" }))
            {
                <div class="form-group">
                    <table class="table table-bordered">
                        <tr>
                            @Html.Hidden("hfItemId", null, new { @id = "hfItemId" })
                        <td>From</td>
                        <td>@Html.TextBox("txtDtFrom", null, new { @class = "datepicker" })</td>
                        <td>To</td>
                        <td>@Html.TextBox("txtDtTo", null, new { @class = "datepicker" })</td>
                    </tr>
                    <tr>
                        <td>RM Item</td>
                        <td>@Html.TextBox("txtItemCode", null, new { @placeholder = "start typing, then select" })</td>
                    </tr>
                    </table>
                      </div>
                <button class="btn btn-default">Submit</button>
            }   
</fieldset>

<table class="tablecontainer" style="width:100%;">
    <tr>
        <th style="width:30px;">
            S.No.
        </th>
        <th style="width:60px;">
            @Html.DisplayNameFor(model => model.ImpDate)
        </th>
        <th style="width:auto;">
            @Html.DisplayNameFor(model => model.ItemCode)
        </th>
        <th style="width:80px;">
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th style="width:50px;">
            @Html.DisplayNameFor(model => model.UnitName)
        </th>
        <th style="width:120px;word-wrap:break-word;">
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @{int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.ValueFor(model => item.ImpDate, "{0:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(model => item.ItemCode)
            </td>
            <td>
                @Html.DisplayFor(model => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(model => item.UnitName)
            </td>
            <td>
                @Html.DisplayFor(model => item.Remarks)
            </td>
            <td>
                @Html.ActionLink("Edit", "CreateUpdate", new { id = item.ImpId })
            </td>
            <td>
                @Html.ActionLink("Delete", null, new { recid = item.ImpId },
                new { onclick = "deleteRecord('" + item.ImpId + "')", style = "color:black;" })
            </td>
        </tr>
        i++;
    }

</table>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@section Scripts{
    
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
            document.getElementById("hfItemId").value = '@ViewBag.itemid';
            document.getElementById("txtItemCode").value = '@ViewBag.itemcode';
            document.getElementById("txtDtFrom").value = '@ViewBag.dtfrom';
            document.getElementById("txtDtTo").value = '@ViewBag.dtto';
        });
    </script>
    <script type="text/javascript">
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
    </script>

    <script type="text/javascript">
        $("#txtItemCode").autocomplete({
            source: function (request, response) {
                var customer = new Array();
                $.ajax({
                    async: false,
                    cache: false,
                    type: "POST",
                    url: "@(Url.Action("AutoCompleteStockItemList", "HelpUtility"))",
                    data: { "term": request.term },
                    success: function (data) {
                        for (var i = 0; i < data.length ; i++) {
                            customer[i] = { label: data[i].Value, Id: data[i].Key };
                        }
                    }
                });
                response(customer);
            }, minLength: 2,
            select: function (event, ui) {
                document.getElementById('hfItemId').value = ui.item.Id;
            }
        });
    </script>

    <script>
        function deleteRecord(impid) {
            var a = confirm("Are you sure to delete this work?");
            if (a == false) {
                return;
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "ImportList")',
                dataType: 'html',
                data: ({
                    //insert your parameters to pass to controller
                    impid: impid
                }),
                success: function () {
                    //alert("Marked Pending Successfully");
                    location.reload();
                }
            });
        }
</script>

}

