@model ManufacturingManagement_V2.Models.StatisticalSummaryMdl
@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Statistical Summary View</b></h4>

<table class="table table-bordered">
    <tr>
      <td><b>Company:</b> <b><i>@Model.CompName</i></b>, 
          <b>Fin.Year:</b> <b><i>@Model.FinYear</i></b>,
          <b>As On Date:</b> <b><i>@Model.AsOnDate</i></b>
      </td>
      <td style="text-align:right;">
          @Html.ActionLink("Options", "Index","StatisticalSummaryReport", new{ @style="color:blue;"})
      </td>
    </tr>
</table>

<table class="tablecontainer" style="width:100%;">
    <tr>
        <th style="width:30px;">
            S.No.
        </th>
        <th style="width:auto;">
            @Html.DisplayNameFor(model => model.SummaryList[0].SCName)
        </th>
        <th style="width:auto;">
            @Html.DisplayNameFor(model => model.SummaryList[0].SegmentName)
        </th>
        <th style="width:100px;text-align:center;">
            Week: @Model.WeekNo
        </th>
        <th style="width:100px;text-align:center;">
            Month: @Model.MonthNo
        </th>
        <th style="width:100px;text-align:center;">
            QTR: @Model.QuarterNo
        </th>
        <th style="width:100px;text-align:center;">
            Fin.Year
        </th>
        <th style="width:50px;">
            @Html.DisplayNameFor(model => model.SummaryList[0].Unit)
        </th>
        @*<th>Link</th>*@
    </tr>
    @{int i = 1;}
    @foreach (var item in Model.SummaryList)
    {
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(model => item.SCName)
            </td>
            <td>
                @Html.DisplayFor(model => item.SegmentName)
            </td>
            <td class="indexColumn" style="text-align:right;">
                @Html.ValueFor(modelItem => item.SSWeek, "{0:##,##,##,##,##0.00}")
            </td>
            <td class="indexColumn" style="text-align:right;">
                @Html.ValueFor(modelItem => item.SSMonth, "{0:##,##,##,##,##0.00}")
            </td>
            <td class="indexColumn" style="text-align:right;">
                @Html.ValueFor(modelItem => item.SSQuarter, "{0:##,##,##,##,##0.00}")
            </td>
            <td class="indexColumn" style="text-align:right;">
                @Html.ValueFor(modelItem => item.SSFinYear, "{0:##,##,##,##,##0.00}")
            </td>
            <td>
                @Html.DisplayFor(model => item.Unit)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "CreateUpdate", new { id = item.RecId })
                </td>*@
        </tr>
        i++;
    }

</table>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

