@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "Stock Report";
    // Layout = "~/views/shared/_DarkLayout.cshtml";
    Layout = "~/views/shared/_LayoutCommon.cshtml";

}

<h4><b>IT Register Report</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        <h5><b>Report Options</b></h5>
        <table class="table table-bordered">
            <tr>
                <td style="width:10%;"> Issue From</td>
                <td>@Html.EditorFor(model => model.DateFrom)</td>
            </tr>
            <tr>
                <td>Issue To</td>
                <td>@Html.EditorFor(model => model.DateTo)</td>
            </tr>
        </table>
    </div>

    <table class="table table-bordered">
        <tr>
            <td style="column-gap:normal">
                <input type="submit" class="btn btn-default" style="width:150px;" value="IssueItem" onclick="target = '_blank';"
                       formaction="@Url.Action("Get_IssueItem_ITCell")" />

                <input type="submit" class="btn btn-default" style="width:150px;" value="StockItem" onclick="target = '_blank';"
                       formaction="@Url.Action("Get_B_AllStockItem_ITRegister")" />

                <input type="submit" class="btn btn-default" style="width:150px;" value="ScrapItem" onclick="target = '_blank';"
                       formaction="@Url.Action("Get_B_AllScrapItem_ITRegister")" />
            </td>
        </tr>
    </table>

}
<h2>@ViewBag.Message<br /></h2>



