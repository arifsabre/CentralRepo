@model ManufacturingManagement_V2.Models.ItemMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<fieldset>
    @using (Ajax.BeginForm("SearchItem", "Item", new AjaxOptions { UpdateTargetId = "divFilter" }))
    {
    <div class="form-group">
        @Html.Hidden("hfSearchItemId", null, new { @id = "hfSearchItemId" })
        <table>
            <tr>
                <td><h4><b>Item Detail</b></h4></td>
                <td>
                    &nbsp;<b>Search Item</b>
                    &nbsp;@Html.TextBox("txtItemCode", null, new { placeholder = "start typing, then select" })
                    &nbsp;<button style="height:27px;">Search</button>
                    &nbsp;<b>Item Id: @Html.DisplayFor(model => model.ItemId)</b>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="font-size:8pt;font-family:Verdana;">
                    @ViewBag.ModifyInfo
                </td>
            </tr>
        </table>
    </div>
    }   
</fieldset>

