            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.HSNCode)</td>
            <td>
                @Html.EditorFor(model => model.HSNCode)
                @Html.ValidationMessageFor(model => model.HSNCode)
            </td>
            <td>@Html.LabelFor(model => model.PurchaseRate)</td>
            <td>
                @Html.EditorFor(model => model.PurchaseRate)
                @Html.ValidationMessageFor(model => model.PurchaseRate)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.MsbQty)</td>
            <td>
                @Html.EditorFor(model => model.MsbQty)
                @Html.ValidationMessageFor(model => model.MsbQty)
