            </td>
            <td>@Html.LabelFor(model => model.ShortName)</td>
            <td>
                @Html.EditorFor(model => model.ShortName)
                @Html.ValidationMessageFor(model => model.ShortName)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.ItemName)</td>
