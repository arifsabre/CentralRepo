@model ManufacturingManagement_V2.Models.ItemMdl

@{
    ViewBag.Title = "Details";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Item Detail</b></h4>

<p>
    @Html.ActionLink("Edit", "CreateUpdate", new { id=Model.ItemId }, new { @class = "btn btn-default" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Create New", "CreateUpdate", null, new { @class = "btn btn-default" })
    @Html.ActionLink("View Log", "../EventLogReport/getLogDetail",
    new { tblid = 32, pkval = Model.ItemId }, new {@target="_blank", @class = "btn btn-default" })
