                <tr>
                    <td style="width:120px;font-weight:bold;">@Html.DisplayNameFor(model => model.ItemCode)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.ItemCode)</td>
                </tr>

                <tr>
                    <td style="width:120px;font-weight:bold;vertical-align:top;">@Html.DisplayNameFor(model => model.ShortName)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.ShortName)</td>
                </tr>

                <tr>
                    <td style="width:120px;font-weight:bold;vertical-align:top;">@Html.DisplayNameFor(model => model.ItemName)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.ItemName)</td>
