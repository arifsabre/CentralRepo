@model ManufacturingManagement_V2.Models.ProductionPlanMdl

@{
    ViewBag.Title = "Details";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Production Plan Detail</b></h4>

@Html.ActionLink("Close", null, null, new { @onclick = "window.close()", @class = "btn btn-default" })

<fieldset>
        <div class="form-group">
            <table class="table table-bordered">
                <tr>
                    <td style="width:10%;font-weight:bold;">Id</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.PlanRecId)</td>
                </tr>

                <tr>
                    <td style="font-weight:bold;">@Html.DisplayNameFor(model => model.PPMonth)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.PPMonth) - @Html.DisplayFor(model => model.PPYear)</td>
                </tr>

                <tr>
                    <td style="font-weight:bold;">@Html.DisplayNameFor(model => model.ItemCode)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.ItemCode)</td>
                </tr>

                <tr>
                    <td style="font-weight:bold;">@Html.DisplayNameFor(model => model.ShortName)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.ShortName)</td>
                </tr>

                <tr>
                    <td style="font-weight:bold;">@Html.DisplayNameFor(model => model.PQty)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.PQty)</td>
                </tr>

                <tr>
                    <td style="font-weight:bold;">@Html.DisplayNameFor(model => model.M2Qty)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.M2Qty)</td>
                </tr>

                <tr>
                    <td style="font-weight:bold;">@Html.DisplayNameFor(model => model.M3Qty)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.M3Qty)</td>
                </tr>

                <tr>
                    <td style="font-weight:bold;">@Html.DisplayNameFor(model => model.TrgQty)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.TrgQty)</td>
                </tr>

                <tr>
                    <td style="font-weight:bold;">@Html.DisplayNameFor(model => model.UnitName)</td>
                    <td style="vertical-align:top;">: @Html.DisplayFor(model => model.UnitName)</td>
                </tr>

            </table>
     </div>
</fieldset>

@if(ViewBag.IsAdmin == "1") {
    using (Html.BeginForm()) {
        <input type="submit" class="btn btn-default" value="Delete" onclick="return confirm('Are you sure to delete this record?');" />
    }
}
