@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "SaleAnalysisRPT";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Sales Analysis Report</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<div class="form-group">
    <h5><b>Report Options</b></h5>
    <table class="table table-bordered">
        <tr>
            <td style="width:15%;"><b>Company</b></td>
            <td>
                @Html.DropDownListFor(model => model.CompCode, ViewBag.CompanyList as SelectList)
                @Html.ValidationMessageFor(model => model.CompCode)
            </td>
        </tr>
        <tr>
            <td><b>Financial&nbsp;Year</b></td>
            <td>
                @Html.DropDownListFor(model => model.FinYear, ViewBag.FinYearList as SelectList,
                new { @onchange = "javascript:getDateRange(this.value);" })
                @Html.ValidationMessageFor(model => model.FinYear)
            </td>
        </tr>
        <tr>
            <td><b>Date From</b></td>
            <td>
                @Html.EditorFor(model => model.DateFrom)
                @Html.ValidationMessageFor(model => model.DateFrom)
            </td>
        </tr>
        <tr>
            <td><b>Date To</b></td>
            <td>
                @Html.EditorFor(model => model.DateTo)
                @Html.ValidationMessageFor(model => model.DateTo)
            </td>
        </tr>
        <tr>
            <td><b>Sale/Order Type</b></td>
            <td>
                @Html.DropDownListFor(model => model.POType, ViewBag.SOType as SelectList)
                @Html.ValidationMessageFor(model => model.POType)
            </td>
        </tr>
        <tr>
            <td><b>Sale Summary</b></td>
            <td style="vertical-align:central;">
                Detailed @Html.EditorFor(model => model.Detailed)
                Apply Date Range @Html.EditorFor(model => model.Above58)
                New Format @Html.EditorFor(model => model.FilterByDT)
            </td>
        </tr>
    </table>
</div>
    <P>
        <input type="submit" class="btn btn-default" value="Submit [Main Report]" onclick="target = '_blank';"
               formaction="@Url.Action("SalesAnalysisRpt")" style="width:225px;" />
        <input type="submit" class="btn btn-default" value="Sale Summary [Col - A / B]" onclick="target = '_blank';"
               formaction="@Url.Action("DisplaySaleSummaryReport")" style="width:225px;" />
        <input type="submit" class="btn btn-default" value="Pending PO [Col - C / D]" onclick="target = '_blank';"
               formaction="@Url.Action("DisplayPendingPOReport")" style="width:225px;" />
        <br /><input type="submit" class="btn btn-default" value="AAL/CO [Col - E]" onclick="target = '_blank';"
                     formaction="@Url.Action("DisplayAALCOReport")" style="width:225px;" />
        <input type="submit" class="btn btn-default" value="Tender L1 [Col - F]" onclick="target = '_blank';"
               formaction="@Url.Action("DisplayTenderReportL1")" style="width:225px;" />
        <input type="submit" class="btn btn-default" value="Tender L2 [Col - G]" onclick="target = '_blank';"
               formaction="@Url.Action("DisplayTenderReportL2")" style="width:225px;" />
        <br><br>
        <span style="font-size:10pt;font-weight:bold;color:black;">
            [Note: Accountable Sales = GST Main + Export + Supplimentary,
            Accountable POs = Railway + Private, Non-Accountable POs = Internal + Warranty]
            <br/>(Apply Date Range option is provided to compare Main Report with Supporting/Sub-Reports only)
        </span>
    </P>
}

