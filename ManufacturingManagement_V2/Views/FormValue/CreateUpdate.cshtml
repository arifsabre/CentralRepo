            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.NoOfWDays)</td>
                <td>
                    @Html.EditorFor(model => model.NoOfWDays)
                    @Html.ValidationMessageFor(model => model.NoOfWDays)
                </td>
                <td>@Html.LabelFor(model => model.PayableBonusAmt)</td>
                <td>
                    @Html.EditorFor(model => model.PayableBonusAmt)
                    @Html.ValidationMessageFor(model => model.PayableBonusAmt)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.PaymentDate)</td>
                <td>
                    @Html.EditorFor(model => model.PaymentDate)
                    @Html.ValidationMessageFor(model => model.PaymentDate)
                </td>
            </tr>
        </table>
    </div>
    <p>
        <input type="submit" class="btn btn-default" value='@ViewBag.AddEdit' />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </p>
    <h5><b>@ViewBag.Message</b></h5>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
            document.getElementById("FinYear").value = '@Model.FinYear';
        });
    </script>
}
