@model IEnumerable<ManufacturingManagement_V2.Models.ItemReceiptMdl>
@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h2>Item Receipt -Purchase Order</h2>

@*<p>
    @Html.ActionLink("Create New", "CreateUpdate", null, new { @class = "btn btn-default" }) 
</p>*@

<fieldset>
        <legend>Item Receipt -Purchase Order</legend>
            @using (Ajax.BeginForm("FilterIndexPOItemReceipt", "ItemReceipt", new AjaxOptions { UpdateTargetId = "divFilter" }))
            {
                <div class="form-group">
                        <table>
                            <tr>
                                <td>From</td>
                                <td>@Html.TextBox("txtDtFrom",null,new { @class = "datepicker" })</td>
                                <td>To</td>
                                <td>@Html.TextBox("txtDtTo",null,new { @class = "datepicker" })</td>
                            </tr>
                        </table>
                      </div>
                <button class="btn btn-default">Submit</button>
            }   
</fieldset>

<table class="tablecontainer" style="width:100%;">
    <tr>
        <th>
            S.No.
        </th>
        <th>Action Link</th>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StrOrderNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VDateStr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseDateStr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
    </tr>
    @{int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.ActionLink("New_Receipt", "CreateUpdatePOItemReceipt", new { id = 0, orderlgrid = item.OrderLgrId })
                <br />@Html.ActionLink("Edit_Receipt", "CreateUpdatePOItemReceipt", new { id = item.RecId, orderlgrid = item.OrderLgrId })
            </td>
            <td>
                @Html.DisplayFor(model => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(model => item.StrOrderNo)
            </td>
            <td>
                @Html.DisplayFor(model => item.ItemCode)
            </td>
            <td>
                @Html.DisplayFor(model => item.PurchaseBalance)
            </td>
            <td>
                @Html.DisplayFor(model => item.UnitName)
            </td>
            <td>
                @Html.DisplayFor(model => item.VDateStr)
            </td>
            <td>
                @Html.DisplayFor(model => item.VNo)
            </td>
            <td>
                @Html.DisplayFor(model => item.PurchaseDateStr)
            </td>
            <td>
                @Html.DisplayFor(model => item.PurchaseNo)
            </td>
            <td>
                @Html.DisplayFor(model => item.Qty)
            </td>
        </tr>
        i++;
    }

</table>

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
            document.getElementById("txtDtFrom").value = '@ViewBag.DtFrom';
            document.getElementById("txtDtTo").value = '@ViewBag.DtTo';
        });
    </script>
    <script type="text/javascript">
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
    </script>
}

