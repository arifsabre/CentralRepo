@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Sale Invoice Report</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        <h5><b>Report Options</b></h5>
        <table class="table table-bordered">
            @Html.HiddenFor(model => model.SaleRecId)
            <tr>
                <td style="width:10%;"><b>Company</b></td>
                <td>@Html.DropDownListFor(model => model.CompCode, ViewBag.CompanyList as SelectList)</td>
            </tr>
            <tr>
                <td><b>Financial&nbsp;Year</b></td>
                <td>
                    @Html.DropDownListFor(model => model.FinYear, ViewBag.FinYearList as SelectList)
                </td>
            </tr>
            <tr>
                <td><b>Invoice No</b></td>
                <td>
                    @Html.EditorFor(model => model.InvoiceNo)
                <label id="lblSaleRecId" style="font-weight:normal;"></label>
            </td>
        </tr>
        </table>
    </div>
    <p>
        <input type="submit" class="btn btn-default" value="Invoice" style="width:150px;" onclick="target = '_blank';"
               formaction="@Url.Action("DisplayInvoice")" />
        <input type="submit" class="btn btn-default" value="Challan" style="width:150px;" onclick="target = '_blank';"
               formaction="@Url.Action("DisplayInvoice")" />
        <br /><input type="submit" class="btn btn-default" value="Download Invoice Excel for Tally" style="width:305px;" onclick="target = '_blank';"
                     formaction="@Url.Action("getEInvoiceExcel")" />
        <br />@Html.ActionLink("Upload IRN Detail XML from Tally", "UploadIRNDetail", "InvoiceControl", null,
                new { id = "mylinkUpload", @target="_new;", @class = "btn btn-default", @style = "width:305px;" })
        <br />@Html.ActionLink("View Updated IRN", "UpdateIRNDetail", "InvoiceControl", null,
                new { id = "mylinkUpdate", @target = "_new;", @class = "btn btn-default", @style = "width:305px;" })
        <br /><br /><a href="/Home/DisplayErpV1?url=../Edit/SaleEntryEdt.aspx">
            <span style="color:blue;">
                <b><u>Invoice/Challan in Old Format (F.Y. upto 2020-21)</u></b>
            </span>
        </a>
    </p>
    <h5><b>@ViewBag.Message</b></h5>
}

@section Scripts{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
            $("#InvoiceNo").attr("placeholder", "start typing, then select");
            //$('#mylinkUpload').attr('href', '#');
            //$('#mylinkUpdate').attr('href', '#');
        });
    </script>

    <script type="text/javascript">
        $("#InvoiceNo").autocomplete({
            source: function (request, response) {
                var liCCode = document.getElementById("CompCode");
                var indexCCode = liCCode.selectedIndex;
                var ccode = liCCode.options[indexCCode].value;
                var liFinYr = document.getElementById("FinYear");
                var indexFinYr = liFinYr.selectedIndex;
                var finyr = liFinYr.options[indexFinYr].value;
                var customer = new Array();
                $.ajax({
                    async: false,
                    cache: false,
                    type: "POST",
                    url: "@(Url.Action("AutoCompleteInvoiceNumbers", "SaleInvoiceReport"))",
                    data: { "term": request.term, "ccode": ccode, "finyr": finyr },
                    success: function (data) {
                        for (var i = 0; i < data.length ; i++) {
                            customer[i] = { label: data[i].Value, Id: data[i].Key };
                        }
                    }
                });
                response(customer);
            }, minLength: 2,
            select: function (event, ui) {
                document.getElementById('SaleRecId').value = ui.item.Id;
                $('#lblSaleRecId').text('Sale RecId: ' + ui.item.Id);
                $('#mylinkUpload').attr('href', '/InvoiceControl/UploadIRNDetail' + '?salerecid=' + ui.item.Id + '&invoiceno=' + ui.item.label);
                $('#mylinkUpdate').attr('href', '/InvoiceControl/UpdateIRNDetail' + '?id=' + ui.item.Id);
            }
        });
    </script>

}

