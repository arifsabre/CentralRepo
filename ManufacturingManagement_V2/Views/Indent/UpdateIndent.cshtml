@model ManufacturingManagement_V2.Models.IndentMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Update Indent</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

        <div class="form-group">
            @*<h3><span style="font-size:14pt;color:white;">Indent No: @Html.DisplayFor(model => model.StrIndentNo)</span></h3>*@
            <h3><span style="font-size:14pt;color:white;">Indent No: @ViewBag.StrIndentNo</span></h3>
            <table class="table table-bordered">
                <tr>
                    @Html.HiddenFor(model => model.IndentId)
                    @Html.HiddenFor(model => model.StrIndentNo)
                    <td>@Html.LabelFor(model => model.VDate)</td>
                    <td>
                        <b>@Html.DisplayFor(model => model.VDate)</b>
                        @Html.ValidationMessageFor(model => model.VDate)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.HODUserId)</td>
                    <td>
                        @Html.DropDownListFor(model => model.HODUserId, ViewBag.HODUserList as SelectList)
                        @Html.ValidationMessageFor(model => model.HODUserName)
                    </td>
                </tr>
            </table>
        </div>
    <h5><b>@ViewBag.Message</b></h5>
    <p>
        <input type="submit" @class = "btn btn-default" value='Update' />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </p>
}

