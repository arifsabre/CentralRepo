<p>
    @Html.ActionLink("Back To Approval", "IndentApprovalHOD")
</p>

<table class="tablecontainer" style="width:100%;">
    <tr>
        <th style="width:30px;">
            S.No.
        </th>
        <th style="width:100px;">
            Indent&nbsp;No<br />[Date]
        </th>
        <th style="width:50px;">
            Date
        </th>
        <th style="width:auto;">
            Indent&nbsp;By
        </th>
        <th style="width:auto;">
            @Html.DisplayNameFor(model => model.ItemCode)
        </th>
        <th style="width:auto;">
            Approx&nbsp;Rate<br />[Item&nbsp;Value]
        </th>
        <th style="width:100px;word-wrap:break-word;">
            Admin
        </th>
        <th style="width:100px;word-wrap:break-word;">
            Query
        </th>
        <th style="width:100px;word-wrap:break-word;">
            Reply
        </th>
    </tr>
    @{int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            <td class="indexColumn" style="width:95px;word-break:keep-all;">
                @Html.DisplayFor(modelItem => item.StrIndentNo)
                <br />[@Html.ValueFor(modelItem => item.VDate, "{0:dd/MM/yyyy}")]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndentByName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemCode)
            </td>
            <td>
                @Html.ValueFor(modelItem => item.ApproxRate, "{0:##,##,##,##,##0.00}")
                <br />[@Html.ValueFor(modelItem => item.ItemValue, "{0:##,##,##,##,##0.00}")]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminQuery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HODReply)
            </td>
        </tr>
        i++;
    }

</table>

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
            document.getElementById("txtDtFrom").value = '@ViewBag.DtFrom';
            document.getElementById("txtDtTo").value = '@ViewBag.DtTo';
        });
    </script>
    <script type="text/javascript">
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
    </script>
}



