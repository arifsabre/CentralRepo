<table class="tablecontainer" style="width:100%;">
    <tr>
        <th style="width:30px;">
            S.No.
        </th>
        <th style="width:130px;">
            IndentDate&nbsp;-No<br />Indent&nbsp;By
        </th>
        <th style="width:auto;">
            [Item&nbsp;Code]<br />Item&nbsp;Description
        </th>
        <th style="width:130px;">
            HOD&nbspApproval&nbsp;On<br />Admin&nbsp;Approval&nbsp;On
        </th>
        <th style="width:25px;">Proceed</th>
    </tr>
    @{int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VDate)&nbsp;-&nbsp;@Html.DisplayFor(modelItem => item.VNo)
                <br />@Html.DisplayFor(modelItem => item.IndentByName)
            </td>
            <td>
                <b>[</b>@Html.DisplayFor(modelItem => item.ItemCode)<b>]</b>
                <br />@Html.DisplayFor(modelItem => item.ItemDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HODApprovalOnStr)
                <br />@Html.DisplayFor(modelItem => item.AdminApprovalOnStr)
            </td>
            <td>
                @Html.ActionLink("Proceed", "ExecuteIndent", new { recid = item.RecId })
            </td>
        </tr>
        i++;
    }

</table>

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
