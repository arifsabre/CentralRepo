@model ManufacturingManagement_V2.Models.ETenderMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<table style="width:100%;">
    <tr>
        <td><h4><b>E-Tender (Step-1)</b></h4></td>
        <td>
            @Html.ActionLink("Step-2 (E-Tender Item Entry)", "../ETenderItem/CreateUpdate",
            new { tenderid = Model.TenderId }, new { style = "color:blue;text-decoration:underline;" })
        </td>
        <td>
            @Html.ActionLink("Display E.T.Format", "../Tender/ETFormatReport", new { tenderid = Model.TenderId },
            new { @target = "_blank", style = "color:blue;text-decoration:underline;" })
        </td>
    </tr>
</table>


<h5><b>@Model.TenderInfo</b></h5>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <table class="table table-bordered">
            @Html.HiddenFor(model => model.TenderId)
            @Html.HiddenFor(model => model.toAdd)
            <tr>
                <td><b>1. Tender Document Cost</b></td>
                <td>
                    @Html.DropDownListFor(model => model.TDocCost, ViewBag.TDocCostList as SelectList)
                    @Html.ValidationMessageFor(model => model.TDocCost)
                </td>
                <td><b>Exempted Against</b></td>
                <td>
                    @Html.DropDownListFor(model => model.TdcmpExmp, ViewBag.TdcmpExmpList as SelectList)
                    @Html.ValidationMessageFor(model => model.TdcmpExmp)
                </td>
            </tr>

            <tr>
                <td><b>DD&nbsp;No</b></td>
                <td>
                    @Html.EditorFor(model => model.TdcmpDDNo)
                    @Html.ValidationMessageFor(model => model.TdcmpDDNo)
                </td>
                <td><b>DD&nbsp;Date</b></td>
                <td>
                    @Html.EditorFor(model => model.TdcmpDDDate)
                    @Html.ValidationMessageFor(model => model.TdcmpDDDate)
                </td>
            </tr>

            <tr>
                <td><b>Tender&nbsp;Document&nbsp;Amount</b></td>
                <td>
                    @Html.EditorFor(model => model.TDocCostAmt)
                    @Html.ValidationMessageFor(model => model.TDocCostAmt)
                </td>
            </tr>

            <tr>
                <td><b>2. EMD Cost</b></td>
                <td>
                    @Html.DropDownListFor(model => model.EMDCost, ViewBag.EmdCostList as SelectList)
                    @Html.ValidationMessageFor(model => model.EMDCost)
                </td>
                <td><b>Exempted Against</b></td>
                <td>
                    @Html.DropDownListFor(model => model.EmdcExmp, ViewBag.EmdcExmpList as SelectList)
                    @Html.ValidationMessageFor(model => model.TdcmpExmp)
                </td>
            </tr>

            <tr>
                <td><b>DD No</b></td>
                <td>
                    @Html.EditorFor(model => model.EmdcDDNo)
                    @Html.ValidationMessageFor(model => model.EmdcDDNo)
                </td>
                <td><b>DD Date</b></td>
                <td>
                    @Html.EditorFor(model => model.EmdcDDDate)
                    @Html.ValidationMessageFor(model => model.EmdcDDDate)
                </td>
            </tr>

            <tr>
                <td><b>EMD&nbsp;Cost&nbsp;Amount</b></td>
                <td>
                    @Html.EditorFor(model => model.EmdCostAmt)
                    @Html.ValidationMessageFor(model => model.EmdCostAmt)
                </td>
            </tr>

            <tr>
                <td colspan="4"><b>3. Bid Process (Techno Commercial Bid Details)</b></td>
            </tr>

            <tr>
                <td><b>A- Eligibility Criteria</b></td>
                <td colspan="3">
                    <b>(As per NIT of the tender)</b>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.RadioButtonFor(model => model.ElgCriteria, "a")
                    &nbsp;Accept
                    &nbsp;&nbsp;
                    @Html.RadioButtonFor(model => model.ElgCriteria, "l")
                    &nbsp;Leave Unattended
                </td>
            </tr>

            <tr>
                <td><b>Reason (if unattended)</b></td>
                <td colspan="3">
                    @Html.EditorFor(model => model.ElgCrtRemarks)
                    @Html.ValidationMessageFor(model => model.ElgCrtRemarks)
                </td>
            </tr>

            <tr>
                <td colspan="4"><b>B- Terms &Aacute; Conditions</b></td>
            </tr>

            <tr>
                <td colspan="2" style="text-align:center;"><b><u>As per Tender Document</u></b></td>
                <td colspan="2" style="text-align:center;"><b><u>As offered</u></b></td>
            </tr>

            <tr>
                <td><b>Valid From Closing Date</b></td>
                <td>
                    @Html.EditorFor(model => model.TC1ValidFrom)
                    @Html.ValidationMessageFor(model => model.TC1ValidFrom)
                    Days
                </td>
                <td><b>Valid From Closing Date</b></td>
                <td>
                    @Html.EditorFor(model => model.TC2ValidFrom)
                    @Html.ValidationMessageFor(model => model.TC2ValidFrom)
                    Days
                </td>
            </tr>

            <tr>
                <td><b>FOR</b></td>
                <td>
                    @Html.EditorFor(model => model.TC1FORDest)
                    @Html.ValidationMessageFor(model => model.TC1FORDest)
                </td>
                <td><b>FOR</b></td>
                <td>
                    @Html.EditorFor(model => model.TC2FORDest)
                    @Html.ValidationMessageFor(model => model.TC2FORDest)
                    (No option available)
                </td>
            </tr>

            <tr>
                <td><b>Mode of Dispatch</b></td>
                <td>
                    @Html.EditorFor(model => model.TC1ModeOfDisp)
                    @Html.ValidationMessageFor(model => model.TC1ModeOfDisp)
                </td>
                <td><b>Mode of Dispatch</b></td>
                <td>
                    @Html.DropDownListFor(model => model.TC2ModeOfDisp, ViewBag.DispModeList as SelectList)
                    @Html.ValidationMessageFor(model => model.TC2ModeOfDisp)
                </td>
            </tr>

            <tr>
                <td><b>Inspection</b></td>
                <td>
                    @Html.EditorFor(model => model.TC1Insp)
                    @Html.ValidationMessageFor(model => model.TC1Insp)
                </td>
                <td><b>Inspection</b></td>
                <td>
                    @Html.TextAreaFor(model => model.TC2Insp, 0, 0,
                     new { @style = "width:320px;height:40px;" })
                    @Html.ValidationMessageFor(model => model.TC2Insp)
                </td>
            </tr>

            <tr>
                <td><b>Delivery Schedule</b></td>
                <td>
                    @Html.TextAreaFor(model => model.TC1DelvPeriod, 0, 0,
                     new { @style = "width:320px;height:50px;" })
                    @Html.ValidationMessageFor(model => model.TC1DelvPeriod)
                </td>
                <td><b>Delivery Period</b></td>
                <td>
                    @Html.EditorFor(model => model.TC2DelvPeriod)
                    @Html.ValidationMessageFor(model => model.TC2DelvPeriod)
                </td>
            </tr>

            <tr>
                <td colspan="2">&nbsp;</td>
                <td><b>Delivery Schedule</b></td>
                <td>
                    @Html.TextAreaFor(model => model.DelvSchedule, 0, 0,
                     new { @style = "width:320px;height:65px;" })
                    @Html.ValidationMessageFor(model => model.DelvSchedule)
                </td>
            </tr>

            <tr>
                <td><b>Payment Terms</b></td>
                <td>
                    @Html.TextAreaFor(model => model.TC1PmtTerms, 0, 0,
                     new { @style = "width:320px;height:50px;" })
                    @Html.ValidationMessageFor(model => model.TC1PmtTerms)
                </td>
                <td><b>Payment Terms</b></td>
                <td>
                    @Html.TextAreaFor(model => model.TC2PmtTerms, 0, 0,
                     new { @style = "width:320px;height:65px;" })
                    @Html.ValidationMessageFor(model => model.TC2PmtTerms)
                </td>
            </tr>

            <tr>
                <td><b>Form D Required</b></td>
                <td colspan="3">
                    &nbsp;
                    @Html.RadioButtonFor(model => model.FormDRequired, "Yes")
                    &nbsp;Yes
                    &nbsp;&nbsp;
                    @Html.RadioButtonFor(model => model.FormDRequired, "No")
                    &nbsp;No
                </td>
            </tr>

            <tr>
                <td><b>C- Performance Statement</b></td>
                <td colspan="3">
                    @Html.TextAreaFor(model => model.PerfStmt, 0, 0,
                     new { @style = "width:640px;height:50px;" })
                    @Html.ValidationMessageFor(model => model.PerfStmt)
                </td>
            </tr>

            <tr>
                <td><b>D- Deviation Required</b></td>
                <td colspan="3">
                    @Html.TextAreaFor(model => model.DeviationReq, 0, 0,
                     new { @style = "width:640px;height:50px;" })
                    @Html.ValidationMessageFor(model => model.DeviationReq)
                </td>
            </tr>

            <tr>
                <td><b>E- Attach Documents</b></td>
                <td colspan="3">
                    @Html.TextAreaFor(model => model.AttachedDocs, 0, 0,
                     new { @style = "width:640px;height:50px;" })
                    @Html.ValidationMessageFor(model => model.AttachedDocs)
                </td>
            </tr>

            <tr>
                <td><b>Remarks</b></td>
                <td colspan="3">
                    @Html.TextAreaFor(model => model.Remarks, 0, 0,
                     new { @style = "width:640px;height:250px;" })
                    @Html.ValidationMessageFor(model => model.Remarks)
                </td>
            </tr>

            <tr>
                <td><b>Uploaded By</b></td>
                <td>
                    @Html.EditorFor(model => model.UploadedBy)
                    @Html.ValidationMessageFor(model => model.UploadedBy)
                </td>
                <td><b>Format Filled By</b></td>
                <td>
                    @Html.EditorFor(model => model.FormatFilledBy)
                    @Html.ValidationMessageFor(model => model.FormatFilledBy)
                </td>
            </tr>

            <tr>
                <td><b>Approved By</b></td>
                <td>
                    @Html.EditorFor(model => model.ApprovedBy)
                    @Html.ValidationMessageFor(model => model.ApprovedBy)
                </td>
            </tr>

        </table>
    </div>
    <h5><b>@ViewBag.Message</b></h5>
    <p>
        <input type="submit" class="btn btn-default" value='@ViewBag.AddEdit' />
        @Html.ActionLink("Close", null, null, new { @onclick = "window.close();", @class = "btn btn-default" })
        <br /><br />
    </p>
}


<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
        });
    </script>

}