@model ManufacturingManagement_V2.Models.InspectionEntryMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Inspection Entry</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        <table class="table table-bordered">
            @Html.HiddenFor(model => model.RecId)
            @Html.HiddenFor(model => model.PlanRecId)
            @Html.HiddenFor(model => model.ItemId)
            <tr>
                <td style="width:10%;">@Html.LabelFor(model => model.EntryDate)</td>
                <td>
                    @Html.EditorFor(model => model.EntryDate)
                    @Html.ValidationMessageFor(model => model.EntryDate)
                </td>
                <td>@Html.LabelFor(model => model.MonthYear)</td>
                <td>
                    @Html.EditorFor(model => model.MonthYear)
                    @Html.ValidationMessageFor(model => model.MonthYear)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.ItemCode)</td>
                <td>
                    @Html.EditorFor(model => model.ItemCode)
                    @Html.ValidationMessageFor(model => model.ItemCode)
                    <label id="lblRate"></label>
                    <label id="lblUnit"></label>
                </td>
                <td>@Html.LabelFor(model => model.InspQty)</td>
                <td>
                    @Html.EditorFor(model => model.InspQty)
                    @Html.ValidationMessageFor(model => model.InspQty)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Remarks)</td>
                <td colspan="3">
                    @Html.EditorFor(model => model.Remarks)
                    @Html.ValidationMessageFor(model => model.Remarks)
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <h5><b>@ViewBag.Message</b></h5>
                    <input type="submit" class="btn btn-default" value='@ViewBag.AddEdit' />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                    @Html.ActionLink("Production Info (for Selected Item)", "Details", "ProductionPlan", null, new { id = "mylink", @target = "_new;", @class = "btn btn-default" })
                </td>
            </tr>
        </table>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Styles.Render("~/Content/themes/base/css")*@

    <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            document.getElementById('ItemCode').focus();
            $("#MonthYear").attr("placeholder", "MM-YYYY");
            $("#ItemCode").attr("placeholder", "start typing, then select");
            $('#mylink').attr('href', '/ProductionPlan/Details' + '?id=' + '@ViewBag.PlanRecId');
        });

        //Date Picker
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true
        });
        //or
        $(document).ready(function () {
            $('.date').datepicker({ dateFormat: "dd/mm/yy" });
        });
    </script>

