    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script type="text/javascript">
    $("#ItemCode").autocomplete({
        source: function (request, response) {
            var customer = new Array();
            var mthyr = document.getElementById('MonthYear').value;
                $.ajax({
                    async: false,
                    cache: false,
                    type: "POST",
                    url: "@(Url.Action("AutoCompleteProductionPlanList", "HelpUtility"))",
                    data: { "term": request.term, "monthyear": mthyr },
                    success: function (data) {
                        for (var i = 0; i < data.length ; i++) {
                            customer[i] = { label: data[i].Value, Id: data[i].Key };
                        }
                    }
                });
                response(customer);
        }, minLength: 2,
        select: function (event, ui) {
                document.getElementById('PlanRecId').value = ui.item.Id;
                $('#mylink').attr('href', '/ProductionPlan/Details' + '?id=' + ui.item.Id);
            }
    });
    </script>

}