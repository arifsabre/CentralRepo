@model IEnumerable<ManufacturingManagement_V2.Models.InspectionEntryMdl>
    @{
        ViewBag.Title = "Index";
        Layout = "~/views/shared/_LayoutCommon.cshtml";
    }

    <h4><b>Inspection List</b></h4>

    <fieldset>
        @using (Ajax.BeginForm("FilterIndex", "InspectionEntry", new AjaxOptions { UpdateTargetId = "divFilter" }))
        {
            <div class="form-group">
                @Html.ActionLink("Create New", "CreateUpdate", null, new { @class = "btn btn-default" })

                &nbsp;&nbsp;&nbsp;From
                @Html.TextBox("txtDtFrom", null, new { @class = "datepicker", @style = "width:90px;" })

                &nbsp;&nbsp;To
                @Html.TextBox("txtDtTo", null, new { @class = "datepicker", @style = "width:90px;" })

                &nbsp; &nbsp;
                <button class="btn btn-default">Submit</button>
            </div>
        }
    </fieldset>

    <table class="tablecontainer" style="width:100%;">
        <tr>
            <th style="width:30px;">
                S.No.
            </th>
            <th style="width:100px;">
                Month/Year
            </th>
            <th style="width:100px;">
                @Html.DisplayNameFor(model => model.EntryDate)
            </th>
            <th style="width:100px;">
                @Html.DisplayNameFor(model => model.ItemCode)
            </th>
            <th style="width:auto;">
                @Html.DisplayNameFor(model => model.ShortName)
            </th>
            <th style="width:100px;">
                @Html.DisplayNameFor(model => model.InspQty)
            </th>
            <th style="width:120px;">
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th style="width:50px;">Action</th>

        </tr>
        @{int i = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(model => item.MonthYear)
                </td>
                <td>
                    @item.EntryDate.ToString(string.Format("dd/MM/yyyy"))
                </td>
                <td>
                    @Html.DisplayFor(model => item.ItemCode)
                    <div>[@Html.DisplayFor(model => item.ItemId)]</div>
                </td>
                <td>
                    @Html.DisplayFor(model => item.ShortName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.InspQty)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Remarks)
                </td>
                <td>
                    @Html.ActionLink("Edit", "CreateUpdate", new { id = item.RecId })
                    <br />@Html.ActionLink("Delete", null, null,
              new { onclick = "deleteEntry('" + item.RecId + "')", style = "color:black;" })
                </td>
            </tr>
            i++;
        }

    </table>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    @section Scripts{
        @*@Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryui")
            @Styles.Render("~/Content/themes/base/css")*@
        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
        <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            //document.getElementById("txtAttDay").focus();
            document.getElementById("txtDtFrom").value = '@ViewBag.DtFrom';
            document.getElementById("txtDtTo").value = '@ViewBag.DtTo';
        });
        </script>
        <script type="text/javascript">
            $(".datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: "dd/mm/yy"
            });
        </script>

        <script>
            function deleteEntry(recid) {
            var a = confirm("Are you sure to delete this entry?");
            if (a == false) {
                return;
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "InspectionEntry")',
                dataType: 'html',
                data: ({
                    //insert your parameters to pass to controller
                    recid: recid
                }),
                success: function () {
                    //alert("Marked Pending Successfully");
                    location.reload();
                }
            });
        }
        </script>

    }

