@model ManufacturingManagement_V2.Models.ProductionEntryMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Daily Production Entry</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<div class="form-group">
    <table class="table table-bordered">
        @Html.HiddenFor(model => model.RecId)
        @Html.HiddenFor(model => model.PlanRecId)
        @Html.HiddenFor(model => model.ItemId)
        <tr>
            <td style="width:14%;">@Html.LabelFor(model => model.EntryDate)</td>
            <td>
                @Html.EditorFor(model => model.EntryDate)
                @Html.ValidationMessageFor(model => model.EntryDate)
            </td>
        </tr>
        @*<tr>
            <td>@Html.LabelFor(model => model.MonthYear)</td>
            <td>
                @Html.EditorFor(model => model.MonthYear) (leave blank for direct entry)
                @Html.ValidationMessageFor(model => model.MonthYear)
            </td>
        </tr>*@
        <tr>
            <td><b>Item<b/></td>
            <td>
                @Html.EditorFor(model => model.ItemCode)
                @Html.ValidationMessageFor(model => model.ItemCode)
                <label id="lblRate"></label>
                <label id="lblUnit"></label>
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.PrdQty)</td>
            <td>
                @Html.EditorFor(model => model.PrdQty)
                @Html.ValidationMessageFor(model => model.PrdQty)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.RejQty)</td>
            <td>
                @Html.EditorFor(model => model.RejQty)
                @Html.ValidationMessageFor(model => model.RejQty)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.RejReason)</td>
            <td>
                @Html.EditorFor(model => model.RejReason)
                @Html.ValidationMessageFor(model => model.RejReason)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Remarks)</td>
            <td colspan="3">
                @Html.EditorFor(model => model.Remarks)
                @Html.ValidationMessageFor(model => model.Remarks)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <h5><b>@ViewBag.Message</b></h5>
                <input type="submit" class="btn btn-default" value='@ViewBag.AddEdit' />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <br /><br />
                <span style="font-size:10pt;">
                    Note: Confirming Qty = Production Qty - Rejected Qty
                    @*<br />Note 2: Item and Month-Year are not editable.*@
                </span>
            </td>
        </tr>
    </table>
</div>
    
}

