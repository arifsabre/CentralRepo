@model ManufacturingManagement_V2.Models.JobworkIssueMdl

@{
    ViewBag.Title = "CreateUpdate";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h4><b>Jobwork Cancellation</b></h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<div class="form-group">
    @Html.HiddenFor(model => model.DispId)
    <table class="table table-bordered">
        <tr>
            <td style="width:10%;">@Html.LabelFor(model => model.DispId)</td>
            <td>
                @Html.DisplayFor(model => model.DispId)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.ChallanNo)</td>
            <td>
                @Html.DisplayFor(model => model.ChallanNo)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Reason)</td>
            <td>
                @Html.EditorFor(model => model.Reason)
                @Html.ValidationMessageFor(model => model.Reason)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.CancelledOn)</td>
            <td>
                @Html.EditorFor(model => model.CancelledOn)
                @Html.ValidationMessageFor(model => model.CancelledOn)
            </td>
        </tr>
    </table>
</div>
    <p>
        <input type="submit" class="btn btn-default" value='Cancel Jobwork' />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </p>
    <h5><b>@ViewBag.Message</b></h5>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            //$("input[type=text]").first().focus();
            document.getElementById("Reason").focus();
        });
    </script>

    <script type="text/javascript">
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
    </script>

}