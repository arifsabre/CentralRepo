@model ManufacturingManagement_V2.Models.MachineMaintenanceMDI

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Machine Maintenance</title>
    <script>
        function GetDetails(id) {
            $.ajax({
                url: "/MachineMaintenance/EditMaintenanceRecord/" + id,
                typr: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (response) {
                    $('#id').val(response.id);
                    $('#ShortName').val(response.ShortName);
                    $('#machineid').val(response.machineid);
                    $('#scheduleId').val(response.scheduleId);
                    $('#NewEmpId').val(response.NewEmpId);
                    $('#userid').val(response.userid);
                    $('#checkdetail').val(response.checkdetail);
                    $('#detailofworkdone').val(response.detailofworkdone);
                    $('#condition').val(response.condition);
                    $('#duedate').val(response.duedate);
                    $('#UpdatedBy').val(response.UpdatedBy);
                    $('#modal-Update').modal('show');
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
            return false;

        }



    </script>
</head>
<body>
    &nbsp;&nbsp;&nbsp;&nbsp; Maintenance Task List
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-Insert">
        Add New Maintenance Task
    </button>
    <div id="printbar" class="pull-right">
    </div>

    <section class="content" style="margin-top:5px;margin-bottom:5px">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                    </div>
                    <div class="box-body">


