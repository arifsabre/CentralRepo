    <div class="modal fade" id="modal-Insert">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="box-title"> Add New Task</h3>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        @using (Html.BeginForm("InsertNewTask", "LibTask", FormMethod.Post))
                        {
                            <div class="modal-body">
                                <div class="col-lg-10">
                                    <div class="form-group">
                                        <label>Task Description</label>
                                        <input type="text" class="form-control" id="Task" name="Task">
                                        <label>Due Date</label>
                                        <input type="date" class="form-control" id="TaskDate" name="TaskDate">
                                        <label>Status</label><br />
                                        @Html.DropDownList("SId", new List<SelectListItem>
                                        {
                                      new SelectListItem { Text = "NotStarted", Value = "3"},
                                      new SelectListItem { Text = "InProgress", Value = "2"},
                                      new SelectListItem { Text = "Completed", Value = "4"}
                                      })
                                        <br />
                                        <label>Priority</label><br />
                                        @Html.DropDownList("PId", new List<SelectListItem>
                                        {
                                      new SelectListItem { Text = "Low", Value = "4"},
                                      new SelectListItem { Text = "Medium", Value = "3"},
                                      new SelectListItem { Text = "High", Value = "2"}
                                      })
                                        <br />
                                        @Html.HiddenFor(model => model.UserId)
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
