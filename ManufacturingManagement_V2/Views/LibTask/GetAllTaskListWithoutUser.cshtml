@model ManufacturingManagement_V2.Models.LibTask
@{
    ViewBag.Title = "InsertNewTask";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Task List</title>

    <script>
        //$(function () {
        //    $('#jdtabledesktop').DataTable();
        //})
        function GetDetails(id) {
            $.ajax({
                url: "/LibTask/Edit_TaskListRecord/" + id,
                typr: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (response) {
                    $('#TaskId').val(response.TaskId);
                    $('#Task').val(response.Task);
                   // $('#TaskDate').val(response.TaskDate);
                    $('#SId').val(response.SId);
                    $('#PId').val(response.PId);
                    $('#UserName').val(response.UserName);
                    $('#modal-Update').modal('show');
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
            return false;
        }


    </script>
</head>
<body>
    <div>
        <h4><b>Update My Tasks</b></h4>
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-Insert">
            Add New Task
        </button>
        <div id="printbar" class="pull-right">
        </div>
    </div>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    @*<div class="box-header">
                        </div>*@
                    <div class="box-body">
                        <table id="jdtabledesktop" class="display nowrap" style="width:100%">
                            <thead>
                                <tr>

                                    <th>TaskId</th>
                                    <th>Task Name</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                    <th>Priority</th>
                                    <th>CreatedBy</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Item_List)
                                {
                                    <tr>
                                        @* @Html.HiddenFor(model => model.TaskId)*@
                                        <td>@Html.DisplayFor(model => item.TaskId)</td>
                                        <td>@Html.DisplayFor(model => item.Task)</td>
                                        <td>@Html.DisplayFor(model => item.TaskDate)</td>
                                        <td>@Html.DisplayFor(model => item.Status)</td>
                                        <td>@Html.DisplayFor(model => item.Priority)</td>
                                        <td>@Html.DisplayFor(model => item.UserName)</td>

                                        <td>
                                            <a onclick="GetDetails(@item.TaskId)">
                                                <i class="fa fa-edit">
                                                </i>
                                            </a>
                                            <a>
                                                @Html.ActionLink(" ", "DeleteTask", "LibTask", new { id = item.TaskId }, new { onclick = "return confirm('Are you sure wants to delete?');", @class = "fa fa-trash-o" })
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="modal-Update">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="box-title">Update Task</h3>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        @using (Html.BeginForm("Edit_TasklList", "LibTask", FormMethod.Post))
                        {
                            <div class="modal-body">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>TaskId</label>
                                        <input type="number" class="form-control" id="TaskId" name="TaskId">
                                        <label>Task</label>
                                        <p> <input type="text" class="form-control" id="Task" name="Task"></p>
                                        @* <p> <input type="date" class="form-control" id="TaskDate" name="TaskDate"></p>*@
                                        <label>Select Statas</label>
                                        <p>
                                            @Html.DropDownListFor(model => model.SId, ViewBag.TaskStatus as SelectList)
                                            @Html.ValidationMessageFor(model => model.SId)
                                        </p>
                                        <label>Select Priority</label>
                                        <p>
                                            @Html.DropDownListFor(model => model.PId, ViewBag.TaskPriority as SelectList)
                                            @Html.ValidationMessageFor(model => model.PId)
                                        </p>
                                        @Html.HiddenFor(model => model.TaskId)
                                        @Html.HiddenFor(model => model.UserId)
                                        @Html.HiddenFor(model => model.UserName)
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-Insert">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="box-title"> Add New Task</h3>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        @using (Html.BeginForm("InsertNewTask", "LibTask", FormMethod.Post))
                        {
                            <div class="modal-body">
                                <div class="col-lg-10">
                                    <div class="form-group">
                                        <label>Task</label>
                                        <input type="text" class="form-control" id="Task" name="Task">
                                        <label>TaskDate</label>
                                        <input type="date" class="form-control" id="TaskDate" name="TaskDate">
                                        <label>TaskStatus</label>
                                        <input type="text" class="form-control" id="TaskStatus" name="TaskStatus">
                                        @Html.HiddenFor(model => model.Status)
                                        @Html.HiddenFor(model => model.UserId)
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Script/Site.js"></script>
</body>
</html>



