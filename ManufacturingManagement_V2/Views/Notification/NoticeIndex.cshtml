        function deleteNotice(recid) {
            var a = confirm("Are you sure to delete this notice?");
            if (a == false) {
                return;
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "Notification")',
                dataType: 'html',
                data: ({
                    //insert your parameters to pass to controller
