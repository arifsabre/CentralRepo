@model ManufacturingManagement_V2.Models.EmployeeMdl
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FlagIndex</title>
    <script>
        //$(function () {
        //    $('#example1').DataTable();
        //})
        function GetDetailsLate(id) {
            $.ajax({
                url: "/FlagSMS/EditSMSLateRecord/" + id,
                typr: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (response) {
                    $('#NewEmpId').val(response.NewEmpId);
                    $('#EmpName').val(response.EmpName);
                    $('#SendSMSLate').val(response.SendSMSLate);
                    $('#modal-UpdateLate').modal('show');
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
            return false;
        }
        function GetDetailsAbsent(id) {
            $.ajax({
                url: "/FlagSMS/EditSMSAbsentRecord/" + id,
                typr: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (response) {
                    $('#NewEmpId1').val(response.NewEmpId);
                    $('#EmpName1').val(response.EmpName);
                    $('#SendSMSAbsent1').val(response.SendSMSAbsent);
                    $('#modal-UpdateAbsent').modal('show');
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
            return false;
        }
        function GetDetailsMissing(id) {
            $.ajax({
                url: "/FlagSMS/EditSMSMissingRecord/" + id,
                typr: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (response) {
                    $('#NewEmpId2').val(response.NewEmpId);
                    $('#EmpName2').val(response.EmpName);
                    $('#SendSMSMissing2').val(response.SendSMSMissing);
                    $('#modal-UpdateMissing').modal('show');
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
            return false;
        }
    </script>
</head>
<body>
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-Insert1" style="margin-top:5px;margin-bottom:5px">
        Update  SMS Flag Screen
    </button>
    <div id="printbar" class="pull-right" style="margin-top:5px;margin-bottom:5px">
    </div>
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <div class="box-header">
                        @*  <h4><b>Update  SMS Flag </b></h4>*@
                    </div>
                    <div class="box-body">

                        <table id="jdtabledesktop" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Late_Status</th>
                                    <th>Absent_Status</th>
                                    <th>Missing_Status</th>
                                    <th>ID</th>
                                    <th>Employee Name</th>
                                    <th>Late_Status</th>
                                    <th>Absent_Status</th>
                                    <th>Missing_Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GetempList)
                                {
                                    <tr>
                                        <td>
                                            <a onclick="GetDetailsLate(@item.NewEmpId)">
                                                <i class="fa fa-pencil-square">
                                                </i>
                                            </a>
                                        </td>
                                        <td>
                                            <a onclick="GetDetailsAbsent(@item.NewEmpId)">
                                                <i class="fa fa-pencil-square">
                                                </i>

                                            </a>
                                        </td>
                                        <td>
                                            <a onclick="GetDetailsMissing(@item.NewEmpId)">
                                                <i class="fa fa-pencil-square">
                                                </i>

                                            </a>
                                        </td>
                                        <td>@Html.DisplayFor(model => item.NewEmpId)</td>
                                        <td>@Html.DisplayFor(model => item.EmpName)</td>
                                        <td>@Html.DisplayFor(model => item.SendSMSLate)</td>
                                        <td>@Html.DisplayFor(model => item.SendSMSAbsent)</td>
                                        <td>@Html.DisplayFor(model => item.SendSMSMissing)</td>


                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal fade" id="modal-UpdateLate">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="box-title"> Update Status Late</h3>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        @using (Html
                            .BeginForm("Update_SMSLate", "FlagSMS", FormMethod.Post))
                        {
                            <div class="modal-body">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <input type="number" class="form-control" id="NewEmpId" name="NewEmpId">
                                        <input type="text" class="form-control" id="EmpName" name="EmpName">
                                        <input type="text" class="form-control" id="SendSMSLate" name="SendSMSLate">
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*//AbsentUpdate*@
    <div class="modal fade" id="modal-UpdateAbsent">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="box-title"> Update Status Absent</h3>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        @using (Html
                            .BeginForm("Update_SMSAbsent", "FlagSMS", FormMethod.Post))
                        {
                            <div class="modal-body">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <input type="number" class="form-control" id="NewEmpId1" name="NewEmpId">
                                        <input type="text" class="form-control" id="EmpName1" name="EmpName">
                                        <input type="text" class="form-control" id="SendSMSAbsent1" name="SendSMSAbsent">
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*//MissingUpdate*@
    <div class="modal fade" id="modal-UpdateMissing">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header with-border">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="box-title"> Update Status Missing</h3>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        @using (Html
                            .BeginForm("Update_SMSMissing", "FlagSMS", FormMethod.Post))
                        {
                            <div class="modal-body">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <input type="number" class="form-control" id="NewEmpId2" name="NewEmpId">
                                        <input type="text" class="form-control" id="EmpName2" name="EmpName">
                                        <input type="text" class="form-control" id="SendSMSMissing2" name="SendSMSMissing">
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissable">
                @ViewBag.Message;
                <a href="#" class="close" data-dissmiss="alert">x</a>
            </div>
        }
    </div>
</body>
</html>


