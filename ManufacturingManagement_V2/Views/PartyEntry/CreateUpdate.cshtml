                    <td>[B/D]</td>
                    <td><b>Address&nbsp;4</b></td>
                    <td>
                        @Html.EditorFor(model => model.Address4)
                        @Html.ValidationMessageFor(model => model.Address4)
                    </td>
                    <td>[B/D]</td>
                </tr>
                <tr>
                    <td><b>State&nbsp;Name</b></td>
                    <td>
                        @Html.EditorFor(model => model.StateName)
                        @Html.ValidationMessageFor(model => model.StateName)
                    </td>
                    <td>[B]</td>
                    <td><b>State&nbsp;Code</b></td>
                    <td>
                        @Html.EditorFor(model => model.StateCode)
                        @Html.ValidationMessageFor(model => model.StateCode)
                    </td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td><b>TIN</b></td>
