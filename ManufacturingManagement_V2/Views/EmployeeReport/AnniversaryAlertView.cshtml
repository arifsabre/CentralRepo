@model ManufacturingManagement_V2.Models.rptOptionMdl

@{
    ViewBag.Title = "Index";
    Layout = "~/views/shared/_LayoutCommon.cshtml";
}

<h5><b>Employee Anniversary Alert</b></h5>

@{var GradeList = new List<System.Web.UI.WebControls.ListItem>
{
          new System.Web.UI.WebControls.ListItem { Text = "Other than Worker", Value="o" },
          new System.Web.UI.WebControls.ListItem { Text = "Worker", Value="w" }
    };
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        <h5><b>Report Options</b></h5>
        <table class="table table-bordered">
            <tr>
                <td style="width:10%;">Grade</td>
                @*<td>@Html.DropDownListFor(model => model.Grade, ViewBag.GradeList as SelectList, "All")</td>*@
                <td>@Html.DropDownListFor(model => model.Grade, new SelectList(GradeList, "Value", "Text"))</td>
            </tr>
            <tr>
                <td>Month From</td>
                <td>@Html.DropDownListFor(model => model.VNoFrom, ViewBag.MonthList as SelectList)</td>
            </tr>
            <tr>
                <td>Month To</td>
                <td>@Html.DropDownListFor(model => model.VNoTo, ViewBag.MonthList as SelectList)</td>
            </tr>
            <tr>
                <td>Report Format</td>
                <td>@Html.DropDownListFor(model => model.ReportFormat, ViewBag.ReportFormatList as SelectList)</td>
            </tr>
        </table>
    </div>
    <p>
        <input type="submit" class="btn btn-default" value="Submit" onclick="target = '_blank';"
               formaction="@Url.Action("EmployeeAnniversaryReport")" />
    </p>
    <h5><b>@ViewBag.Message</b></h5>
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
            //$("#RegNo").attr("placeholder", "start typing, then select");
        });
    </script>

}
